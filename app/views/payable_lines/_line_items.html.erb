<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Payable Line Items</h4>
            <span class="span6 heading right">
              <% if can? :edit, Payable   %>
                <%= link_to 'New Line Item', new_payable_payable_line_path(@payable), :class => "btn btn-mini btn-success"  %>  
               <% end %> 
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->
    <div class="widget-body">
        <table id="table_report_payable_line_list" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
                <tr>                   
                    <th>Description</th>
                    <th>Cost</th>
                    <th>Notes</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report_payable_line_list", :path => payable_payable_lines_path(@payable), :extras => {:slno => false},
        :columns => '[
                        { "mData": "payable_line_description" },
                        { "mData": "payable_line_cost" },
                        { "mData": "payable_line_notes" },                      
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>