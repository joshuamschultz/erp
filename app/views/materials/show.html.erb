<div class="row-fluid span8">
  <div class="label label-large label-primary arrowed-in arrowed-right">
    <h4>Material</h4>
  </div>
  <%= link_to("edit", edit_material_path(@material)) %>
  <%= link_to("back", :back) %>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Material:</th>
        <td><%= @material.material_short_name %></td>
      </tr>
      <tr>
        <th>Name</th>
        <td><%= @material.material_description %></td>
      </tr>
      <tr>
        <th>Notes</th>
        <td><%= @material.material_notes %></td>
      </tr>
      <tr>
        <th>Active</th>
        <td><%= @material.material_active %></td>
      </tr>
    </thead>
  </table>
</div>

<div class="row-fluid span8">
</br>
</div>

<div class="row-fluid span8">
  <div class="label label-large label-primary arrowed-in arrowed-right">
    <h4>Elements</h4>
  </div>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Element</th>
        <th>Symbol</th>
        <th>High</th>
        <th>Low</th>
      </tr>
    </thead>
    <tbody>
      <% @material_elements.each do |element| %>
        <tr>
          <td><%= element.element.element_name %></td>
          <td><%= element.element.element_symbol %></td>
          <td><%= element.element_high_range %></td>
          <td><%= element.element_low_range %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
