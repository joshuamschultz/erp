<div class="row-fluid">
  <div class="row-fluid">
    <div class="span6">
          <h4><strong class="alert-success">Materials</strong></h4>
    </div>
    <div class="span6">
        <%= link_to 'New Material', new_material_path, :class => "btn btn-mini btn-success" %>
    </div>
    <p id="notice" class="text-info"><%= notice %></p>
  </div>

  <table id="table_report" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>Sl No</th>
        <th>Short Name</th>
        <th class="hidden-480">Description</th>
        <th class="hidden-480">Active</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @materials.each_with_index do |material, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= material.material_short_name %></td>
          <td class="hidden-480"><%= material.material_description %></td>
          <td class="hidden-480"><%= material.material_active %></td>

          <td>  <%= link_to 'Show', material, :class => "btn btn-mini btn-success" %>
                <%= link_to 'Edit', edit_material_path(material), :class => "btn btn-mini btn-info" %>
                <%= link_to 'Delete', material, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-mini btn-danger" %>
                <%= link_to 'Elements', "#", :class => "btn btn-mini btn-warning" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script type="text/javascript">
    $(document).ready(function(){ 
        var oTable1 = $('#table_report').dataTable({
          "aoColumns": [null, null, null, null, { "bSortable": false }]
        });
    });
</script>