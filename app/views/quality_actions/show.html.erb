<div class="right">
    <%= @quality_action.get_link.html_safe %>
</div>
<div class="row-fluid">
    <%= render :partial => 'quality_action_info' %>
    <div class="span9"> 
        <div class="row-fluid item_detail_classic_btn">
            <div class="span3 well">
                <a class="widget-stats" href="#" id="" onclick="quality_report()">
                    <h5><strong><%= @quality_action.quality_action_no %></strong></h5>
                    <span class="txt"><strong>Quality ID</strong></span>
                    <div class="clearfix"></div>
                </a>
            </div>



        </div>
    </div>
</div>

<div class="row-fluid">
    <h5>Definition of issue :<span></span></h5>
    <div class="well"> 
        <div class="row-fluid">    
            <div class="span12">
                <%= @quality_action.definition_of_issue %>
            </div>
        </div>
    </div>
    <div class="separator bottom"></div>

    <h5>Short term fix :<span></span></h5>
    <div class="well"> 
        <div class="row-fluid">    
            <div class="span12">
                <%= @quality_action.short_term_fix %>
            </div>
        </div>
    </div>
    <div class="separator bottom"></div>

    <h5>Root cause :<span></span></h5>
    <div class="well"> 
        <div class="row-fluid">    
            <div class="span12">
                <%= @quality_action.root_cause %>
            </div>
        </div>
    </div>

    <!-- Attachments -->
   <% if @quality_action.cause_analysis.present? %>
        <%= @quality_action.cause_analysis.attachment.attachment_url("link_action") %>
   <% end %>

   
    <div class="separator bottom"></div>

    <h5>Required action :<span></span></h5>
    <div class="well"> 
        <div class="row-fluid">    
            <div class="span12">
                <%= @quality_action.required_action %>
            </div>
        </div>
    </div>
    <div class="separator bottom"></div>
</div>

<div class="separator bottom"></div>

<div class="separator bottom"></div>

<div class="separator bottom"></div>


<div class="row-fluid">
    <table width="100%">
        <tr>
            <td width="70%">
                <table width="100%">
                    <tr><td><h5>Created By :<span></span> <%= @quality_action.created_user.name %></h5></td></tr>
                    <tr><td><h5>Date :<span></span> <%= @quality_action.created_at %></h5></td></tr>
                    <%= @quality_action.users.collect{|user| "<tr><td></br></td> </tr>" }.join.html_safe %>          
                </table>
            </td>
            <td width="30%">
                <table width="100%">
                    <tr width="100%" align="center" style="border-bottom:1px solid #e3e3e3;">
                     <td>Responsible </br> Party(s)</td>
                     <td style="border:1px solid #e3e3e3; border-bottom:0px; border-top:0px;">Due  Date</td>
                     <td>Status</td>
                    </tr>
                    <tr width="100%" align="center">
                        <td><%= @quality_action.users.collect{|user| user.name+"</br>" }.join.html_safe %></td>
                        <td style="border:1px solid #e3e3e3; border-bottom:0px; border-top:0px;"><%= @quality_action.due_date %></td>
                        <td><%= CommonActions.set_quality_status(@quality_action.quality_action_status) %></td>
                    </tr>
                </table> 
            </td>
        </tr>
    </table> 
    
</div>

<div class="separator bottom"></div>
<div class="separator bottom"></div>


<!-- Attachments -->
<div class="row-fluid">
    <div class="attachment-pulp">
        <%= render :partial => 'attachments/droppable_form_plup_less' %>
    </div>
    <div class="span8">
        <%= render 'attachments/attachments_less' %>
    </div>
</div>

<script type="text/javascript">
function quality_report() {
    var quality_iframe = $("#myPrintView")[0];
    quality_iframe.contentWindow.focus();
    quality_iframe.contentWindow.print();

}
</script>
<iframe src="<%= quality_report_quality_action_path(@quality_action) %>" style="border:0;" id="myPrintView" width="10" height= "10"></iframe>