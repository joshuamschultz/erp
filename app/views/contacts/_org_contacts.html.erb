<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading"><%= @contact_type.titlecase.pluralize %></h4>
            <span class="span6 heading right">
                <%#= link_to 'Back to ' + @contactable.class.to_s, @contactable, :class => "btn btn-small" %>
                <% if can? :edit, @contact %>
                <%= link_to 'New ' + @contact_type.titlecase, new_contact_path(:object_id => @contactable.id, :contact_type => @contact_type), :class => "btn btn-mini btn-success" %>
                <% end %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="table_report_contacts" class="dynamicTable table table-striped table-bordered table-condensed row-fluid">
            <thead>
              <tr>
                <% if @contact_type == "contact" %>
                    <th>First Name</th>
                    <th>Last Name</th>
                <% end %>
                <th>Title</th>
                <% if @contact_type == "address" %>
                    <th>Description</th>
                    <th>City</th>
                <% end %>
                <th>Telephone</th>
                <th>Email</th>
                <th>Fax</th>
                <th></th>
              </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
</div>

<% contact_fields = (@contact_type == "contact") ? '{"mData": "first_name"}, {"mData": "last_name"},' : ' ' %>

<% address_fields = (@contact_type == "address") ? '{"mData": "contact_description"}, {"mData": "contact_city"},' : ' ' %>

<%= render :partial => 'layouts/app_layouts/data_table', :locals =>     {
        :name => "table_report_contacts", :path => contacts_path(:object_id => @contactable.id, 
        :contact_type => @contact_type), :extras => {:slno => false}, 
        :columns => '[' + contact_fields + 
                    '
                        { "mData": "contact_title" },
                    ' + address_fields +
                    '
                        { "mData": "contact_telephone" },
                        { "mData": "contact_email" },
                        { "mData": "contact_fax" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>