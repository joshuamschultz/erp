<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading"><%= @contact_type.titlecase.pluralize %></h4>
            <span class="span6 heading right">
                <%= link_to 'New ' + @contact_type.titlecase, new_contact_path(:object_id => @contactable.id, :contact_type => @contact_type), :class => "btn btn-mini btn-success" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>SLNO</th>
                <th>Title</th>
                <th>Description</th>
                <th>Telephone</th>
                <th>Email</th>
                <th>Active</th>
                <th></th>
              </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
</div>


<%= render :partial => 'layouts/app_layouts/data_table', :locals =>     {
        :name => "table_report", :path => contacts_path(:object_id => @contactable.id, :contact_type => @contact_type),
        :columns => '[
                        { "mData": "id" },
                        { "mData": "contact_title" },
                        { "mData": "contact_description" },
                        { "mData": "contact_telephone" },
                        { "mData": "contact_email" },
                        { "mData": "contact_active" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>