<div class="row-fluid">
  <div class="row-fluid">
    <div class="span6">
          <h4><strong class="alert-success">Process Types</strong></h4>
    </div>
    <div class="span6">
        <%= link_to 'New Process', new_process_type_path, :class => "btn btn-mini btn-success" %>
    </div>    
  </div>

  <% if notice %><p id="notice" class="alert alert-info"><%= notice %></p><% end %>

    <table id="table_report" class="table table-striped table-bordered table-hover">
        <thead>
        <tr>
            <th>ID</th>
            <th>Short Name</th>
            <th>Description</th>
            <th>Notes</th>
            <th>Active</th>
            <th></th>
        </tr>
        </thead>

        <tbody>
        <% @process_types.each do |process_type| %>
          <tr>
            <td><%= process_type.id %></td>
            <td><%= process_type.process_short_name %></td>
            <td><%= process_type.process_description %></td>
            <td><%= process_type.process_notes %></td>
            <td><%= process_type.process_active %></td>
            <td></td>
          </tr>
        <% end %>
        </tbody>
    </table>
</div>

<script type="text/javascript">
    $(document).ready(function(){ 
        var oTable1 = $('#table_report').dataTable({
            "bAutoWidth": false,
            "bProcessing": true,
            "sAjaxSource": '<%= process_types_path %>',
            "aoColumns": [
                { "mData": "id" },
                { "mData": "process_short_name" },
                { "mData": "process_description" },
                { "mData": "process_notes" },
                { "mData": "process_active"},
                { "mData": "links", "bSortable": false, "bSearchable": false }
            ]
        });
    });
</script>
