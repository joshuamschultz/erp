<script type="text/javascript">
$(document).ready(function(){ 
  var i =1;
  var tot_amount = 0;
<% @deposit_checks.each do |d| %>
  <% if d.active == 1 %>
   <% receipt = Receipt.find_by_deposit_check_id(d.id) %>
   tot_amount += parseFloat(<%=   receipt.receipt_lines.sum(:receipt_line_amount).to_f %>);
   $("#cash #check"+i).text("<%= receipt.receipt_lines.sum(:receipt_line_amount) %>");
   i++;
  <% end %>
<% end %>
$("#cash #tot_count").text(--i);
$("#cash #tot_amt").text(tot_amount.toFixed(2) );

});
</script>