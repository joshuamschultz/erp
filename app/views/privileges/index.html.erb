<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Users</h4>
            <span class="span6 heading right">
            <% if can? :edit, @privilege %>
                <%= link_to 'New User', new_privilege_path, :class => "btn btn-mini btn-success" %>
            <% end %>                
            </span>
        </div> 
    </div>
    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>SLNO</th>
                <th>Email</th>
                <th>Name</th>
                <th>Role</th>
                <th>Mobile no</th>
                <th>Active</th>
                <th></th>   
              </tr>
            </thead>
        </table>
    </div>
</div>


<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report",  :path => privileges_path,
        :columns => '[
                        { "mData": "id" },
                        { "mData": "user_email" },
                        { "mData": "user_name" },
                        { "mData": "role"},                       
                        { "mData": "mobile_no" },
                        { "mData": "active" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>