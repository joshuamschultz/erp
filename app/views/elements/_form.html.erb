<%= simple_form_for(@element, :html => {:id => "form_for_element", :class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :element_name, :label => "Name", :autofocus => true %>
    <%= f.input :element_symbol, :label => "Symbol" %>
    <%= f.input :element_notes, :label => "Notes" %>
    <%= f.input :element_active, :label => "Active"  %>
  </div>

  <div class="form-actions">
   <% if can? :edit , MaterialElement %>
    <%= f.button :submit, "Submit", :class =>"btn" %>

     <%= link_to 'Delete', element_path(@element), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" unless @element.new_record? %>
     <% end %>
    <%= link_to 'Back to Elements', elements_path,:class =>"btn" %>
  </div>
<% end %>
<script type="text/javascript">
    tab_field_forms["form_for_element"] = ["element_element_name", "element_element_symbol", "element_element_notes", "element_element_active"];
</script>
