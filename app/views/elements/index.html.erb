<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Elements</h4>
            <span class="span6 heading right">
                <%= link_to 'New Element', new_element_path, :class => "btn btn-mini btn-success" %>              
            </span>
        </div> 
    </div>
    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Symbol</th>
                    <th>Notes</th>
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                
            </tbody>
        </table>
    </div>
</div>
<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report",  :path => elements_path, :extras => {:slno => false},
        :columns => '[
                        { "mData": "element_name" },
                        { "mData": "element_symbol" },
                        { "mData": "element_notes", "bVisible": false },
                        { "mData": "element_active" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>