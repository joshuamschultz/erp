<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Element Info</h4>
  </div>
    <table class="table table-striped table-bordered">
      <tbody>
      <tr>
        <td>Name:</td>
        <td><%= @element.element_name %></td>
      </tr>

      <tr>
        <td>Symbol:</td>
        <td><%= @element.element_symbol %></td>
      </tr>

      <tr>
        <td>Notes:</td>
        <td><%= @element.element_notes %></td>
      </tr>
      <tr>
        <td>Active:</td>
        <td><%= @element.element_active %></td>
      </tr>
    </tbody>
  </table>
  <div class="form-actions">
    <% if can? :edit , Element %>
      <%= link_to 'Edit', edit_element_path(@element), :class => "btn" %> 
    <% end %>

    <%= link_to 'Back', elements_path, :class => "btn" %>    
  </div>
</div>



