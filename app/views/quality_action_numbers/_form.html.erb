<div class="separator bottom"></div>
<%= simple_form_for(@quality_action_number, :html => {:id => "form_for_quality_action_number",:class => "form-horizontal", :multipart => true }) do |f| %>
	<%= f.error_notification %>
	<div class="form-inputs">
	    <%= f.input :next_action_no, :label => "Next Quality Action Number" %>
	</div>
	<div class="separator bottom"></div> 
	<div class="form-actions">
      <%= f.button :submit %>
      <%= link_to 'Back', quality_action_number_path(@quality_action_number) , :class => "btn btn-small" %>

  	</div>
<%end%>

<script type="text/javascript">
    tab_field_forms["form_for_quality_action_number"] = ["check_code_next_check_code"];
</script>