                            <br>
                            <label>
                            <%= check_box_tag 'pfmea_analysis', "true",@ppap.pfmea_analysis %>
                            PFMEA - Process Failure Mode & Effect Analysis</label>
                            <br>
                            <label>
                            <%= check_box_tag 'control_plan', "true",@ppap.control_plan %>
                            Control Plan</label>
                            <br>
                            <label>
                            <%= check_box_tag 'Other', "true",@ppap.Other %>
                            Other:</label>
                            <br>
                            <label for="checkbox9">
                            </label>
                        </td>
                        <td width="50%" class="border-none">
                            <p class="text-align-02">
                                <label>
                                <%= check_box_tag 'first_article_parts', "true",@ppap.first_article_parts , :disabled => false %>
                                First Article Parts (labelled)</label>
                                <br>
                                <label>
                                <%= check_box_tag 'fai_dimensional_inspection', "true",@ppap.fai_dimensional_inspection , :disabled => false %>
                                FAI - Dimensional Inspection Results/ Eng Dwg</label>
                                <br>
                                <label>
                                <%= check_box_tag 'fai_material_test_result', "true",@ppap.fai_material_test_result , :disabled => false %>
                                FAI - Material Test Results</label>
                                <br>
                                <label>
                                <%= check_box_tag 'guage_review', "true",@ppap.guage_review , :disabled => false %>
                                Gage Review</label>
                                <br>
                                <label>
                                <%= check_box_tag 'measurement_analysis', "true",@ppap.measurement_analysis , :disabled => false %>
                                Measurement Analysis Study (Gage R&R)</label>
                                <br>
                                <label>
                                <%= check_box_tag 'process_capabilty_study', "true",@ppap.process_capabilty_study , :disabled => false %>
                                Process Capability Study</label>
                                <br>
                                <label>
                                <%= check_box_tag 'production_run_rate', "true",@ppap.production_run_rate , :disabled => false %>
                                Production Run at Rate</label>
                                <br>
                                <label>
                                <%= check_box_tag 'appearance_report', "true",@ppap.appearance_report , :disabled => false %>
                                Appearance Approval Report</label>
                                <br>   
                            </p>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
        </tr>
        <tr>
            <td class="none-01">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <th width="26%" scope="row"> </th>
                        <td width="74%"><label for="checkbox11">These results meet all drawing & specification requirements:  &nbsp;&nbsp;&nbsp; 
                         <%= radio_button_tag :result_meeting_yes, true, checked = @ppap.result_meeting_yes, :disabled =>  false, :id => "result_meeting_yes"%>&nbsp; 
                            Yes    <%= radio_button_tag :result_meeting_yes, true, checked = !@ppap.result_meeting_yes, :disabled => false, :id => "result_meeting_no" %>&nbsp;  No if "No" explain</label>
                          
                            <%#= radio_button_tag :result_meeting_yes, :collection => , :selected => @ppap.result_meeting_yes %>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td class="none-01">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr>
                        <th class="border-none">#Past/Hours : <%= @ppap.past_hour %></th>
                        <th>#Hour/Run: <%= @ppap.hour_run %></th>
                        <th>Date: <%=@ppap.date%></th>
                    </tr>
                    <tr>
                        <th>Committed weekly capacity: &nbsp; <%= @ppap.commited_weekly_capacity %></th>
                        <th colspan="2">Maximum Weekly Capacity:&nbsp;  <%= @ppap.maximum_weekly_capacity %></th>
                    </tr>
                    <tr>
                        <th colspan="3">Lathe CNC Maching, Heat Treat Oven, Wash Bat Identify the constraint operation(s):&nbsp;  <%= @ppap.lathe_cnc %></th>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>
