<script type="text/javascript">
    <% if can? :edit , Ppap %>
           
    
    $(function() {
        $(":checkbox").change(function(){
            set_value(this, "check");
            // $.post("index.php", { id: this.id, checked: this.checked });
        });


        $("input:radio").click(function (){
            set_value(this, "level");
          });
        function set_value(this1, type){
            initialize_api_call({"url": "/common_actions/get_info", "type": "GET", "data_type": "json", "params": {"mode": "set_psw_value", "psw_id": <%= @ppap.id %>, "value": this1.checked, "field": this1.id, "type": type}}, "results", {});
        }
    });
    function results(response, callback_params, api_params){
        if(response["aaData"] ==  "fail"){
            location.reload(true);
        }
    };
    <% end %>  
    // Disabling all the form elements if the user is cusotmer
    // $(".ppap :input").attr("disabled", true);
</script>