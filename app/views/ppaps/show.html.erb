                        <td width="23%" class="border-none">
                            <label> <%= check_box_tag 'initial_submission', "true", @ppap.initial_submission , :disabled => false %> Initial submission</label><br>
                            <label><%= check_box_tag 'revision_change', "true", @ppap.revision_change , :disabled => false %>Revision Change</label><br>
                            <label><%= check_box_tag 'process_change', "true", @ppap.process_change , :disabled => false %> Process Change</label>
                        </td>
                        <td width="26%" class="border-none">
                            <label><%= check_box_tag 're_submission', "true", @ppap.re_submission , :disabled => false %> Re-Submission </label><br>
