        <%= link_to "Back", ppaps_path, :class =>"btn btn-small" %>
        </span>
    </div>
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr >
            <td class="none-01 border-none">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr align="left" valign="top">
                        <th width="26%" scope="row" class="align">
                            <p>SUPPLIER</p>
                            <p>PART SUBMISSION WARRANT (PSW)</p>
                        </th>
                        <td width="74%" class="none-01">
                            <table width="100%" border="0" cellspacing="0" cellpadding="0">
                                <tr align="left" valign="top">
                                    <th scope="row" >Date</th>
                                    <th scope="row"><%= @ppap.created_at.strftime("%d/%m/%Y") %></th>
                                </tr>
                                <tr align="left" valign="top">
                                    <th scope="row">FAI #</th>
                                    <th scope="row"><%= @ppap.quality_lot.fai %> </th>
                                </tr>
                                <tr align="left" valign="top">
                                    <th scope="row">Part Number</th>
                                    <th scope="row"><%= @ppap.quality_lot.item_revision.item.item_part_no %></th>
                                </tr>
                                <tr align="left" valign="top">
                                    <th scope="row">Part Name</th>
                                    <th scope="row"><%= @ppap.quality_lot.item_revision.item_name %></th>
                                </tr>
                                <tr align="left" valign="top">
                                    <th scope="row">Drawing No.</th>
                                    <th scope="row"><%= @ppap.quality_lot.item_revision.item.item_part_no %></th>
                                </tr>
                                <tr align="left" valign="top">
                                    <th scope="row" class="none-01" colspan="2">
                                        <table width="100%" border="0" class="nothing">
                                            <tr align="left" valign="top">
                                                <th align="center" scope="row">Drawing Rev Level</th>
