                    <tr>
                        <th width="26%" scope="row" class="border-none" "text-align">Requested Submission Level</th>
                        <td width="74%"> 
                            <label>Level &nbsp; <%= radio_button_tag 'level', "true", @ppap.level1, :id => "level1" %> &nbsp;Warrant only </label><br>
                            <label>Level &nbsp; <%= radio_button_tag 'level', "true", @ppap.level2, :id => "level2" %> &nbsp; Warrant with product samples and limited supporting data submitted to customer </label><br>
                            <label>Level &nbsp; <%= radio_button_tag 'level', "true", @ppap.level3, :id => "level3" %> &nbsp; Warrant with product samples and complete supporting data submitted to customer </label><br>
                            <label>Level &nbsp; <%= radio_button_tag 'level', "true", @ppap.level4, :id => "level4" %> &nbsp;Warrant and other requirements as defined by customer </label><br>
                            <label>Level &nbsp; <%= radio_button_tag 'level', "true", @ppap.level5, :id => "level5" %> &nbsp;Warrant with product samples and complete supporting data reviewed at Mfg location  </label>
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr>
            <td class="none-01">
                <table width="100%" border="0" cellspacing="0" cellpadding="0">
                    <tr align="left" valign="top">
