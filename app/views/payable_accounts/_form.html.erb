<div class="row-fluid">
  <%= render :partial => 'payables/payable_info' %>

  <div class="span9 well">
    <%= simple_form_for([@payable, @payable_account], :html => {:id => "form_for_payable_accounts",:class => "form-horizontal"}) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.association :gl_account, label_method: :gl_account_title, include_blank: false, autofocus: true %>
        <%= f.input :payable_account_description, label: "Description" %>
        <%= f.input :payable_account_amount, label: "Amount" %>   
      </div>

      <div class="separator bottom"></div>

      <div class="form-actions">
          <%= f.submit "Save", :class => "btn" %>
          <%= link_to 'Delete', payable_payable_account_path(@payable, @payable_account), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" unless @payable_account.new_record? %>
          <%= link_to 'Back to Payable', payable_path(@payable), :class => "btn" %>
      </div>
    <% end %>

    <%= render :partial => "payable_accounts/payable_accounts" %>
  </div>
</div>



<script type="text/javascript">
    tab_field_forms["form_for_payable_accounts"] = ["payable_account_gl_account_id", "payable_account_payable_account_description", "payable_account_payable_account_amount"];
</script>
