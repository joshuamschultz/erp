<%= simple_form_for([@item,@item_part_dimension], :html => {:id => "form_for_item_dimension",:class => "form-horizontal"}) do |f| %>
 <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :item_part_letter, :autofocus => true %>
    <%= f.input :item_part_type %>
    <%= f.input :item_part_pos_tolerance %>
    <%= f.input :item_part_neg_tolerance %>
    <%= f.input :item_part_critical %>
    <%= f.input :item_part_notes %>
    <%= f.input :item_part_active %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Delete', item_item_part_dimension_path(@item, @item_part_dimension), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small" unless @item_part_dimension.new_record? %>
  </div>
<% end %>
<script type="text/javascript">
    tab_field_forms["form_for_item_dimension"] = ["item_part_dimension_item_part_letter", "item_part_dimension_item_part_type", "item_part_dimension_item_part_pos_tolerance", "item_part_dimension_item_part_neg_tolerance", "item_part_dimension_item_part_critical","item_part_dimension_item_part_notes","item_part_dimension_item_part_active"];
</script>
