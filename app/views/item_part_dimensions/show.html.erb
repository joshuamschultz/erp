<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Item Part Dimesion Info</h4>
  </div>
  <table class="table table-striped table-bordered">
    <tbody>     
      <tr>
        <td>Item part letter:</td>
        <td><%= @item_part_dimension.item_part_letter %></td>
      </tr>

      <tr>
        <td>Item part type:</td>
        <td><%= @item_part_dimension.item_part_type %></td>
      </tr>

      <tr>
        <td>Item part pos tolerance:</td>
        <td><%= @item_part_dimension.item_part_pos_tolerance %></td>
      </tr>

      <tr>
        <td>Item part neg tolerance:</td>
        <td><%= @item_part_dimension.item_part_neg_tolerance %></td>
      </tr>

      <tr>
        <td>Item part critical:</td>
        <td><%= @item_part_dimension.item_part_critical %></td>
      </tr>

      <tr>
        <td>Item part notes:</td>
        <td><%= @item_part_dimension.item_part_notes %></td>
      </tr>

      <tr>
        <td>Item part active:</td>
        <td><%#= @item_part_dimension.item_part_active %></td>
      </tr>
    </tbody>
  </table>
  <div class="form-actions">
    <%= link_to 'Edit', edit_item_item_part_dimension_path(@item, @item_part_dimension), :class => "btn"%> 
    <%= link_to 'Back to dimensions of ' + @item.item_name, item_item_part_dimensions_path(@item), :class => "btn" %>
  </div>
</div>


