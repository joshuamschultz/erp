<%= simple_form_for(@credit_register) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :transaction_date %>
    <%= f.input :payment_id %>
    <%= f.input :organization_id %>
    <%= f.input :amount %>
    <%= f.input :balance %>
    <%= f.input :rec %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
