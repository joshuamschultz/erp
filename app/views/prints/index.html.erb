<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Prints</h4>
            <span class="span6 heading right">
                <%= link_to 'New Print', new_print_path, :class => "btn btn-mini btn-success" %>                
            </span>
        </div> 
    </div>
    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>    
                <th>SLNO</th>              
                <th>Name</th>
                <th>Description</th>
                <th>Notes</th>
                <th>Active</th>
                <th></th>
              </tr>
            </thead>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report",  :path => prints_path,
        :columns => '[
                        { "mData": "id" },
                        { "mData": "show" },
                        { "mData": "print_description" },
                        { "mData": "print_notes" },
                        { "mData": "print_active" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>