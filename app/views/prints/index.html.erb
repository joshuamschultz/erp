<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Prints</h4>
            <span class="span6 heading right">
                <%= link_to 'New Print', new_print_path, :class => "btn btn-mini btn-success" %>                
            </span>
        </div> 
    </div>
    <div class="widget-body">
        <table id="table_report_prints" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>                
                <th>Name</th>
                <th>Revision</th>
                <th>Effective Date</th>
                <th>Description</th>
                <th>Notes</th>
                <th>Public</th>
                <th>Status</th>
                <th>Active</th>
                <th>Uploaded Date</th>
                <th>Uploaded By</th>
                <th>Approved By</th>
                <th></th>
              </tr>
            </thead>
        </table>
    </div>
</div>

