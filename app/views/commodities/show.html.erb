<div class="row-fluid span8">
    <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Commodity Info</h4>
    </div>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
              <td class="span2">Name :</td>
              <td class="span5"><%= @commodity.commodity_identifier %></td>
            </tr>

            <tr>
              <td class="span3">Description :</td>
              <td class="span5"><%= @commodity.commodity_description %></td>
            </tr>

            <tr>
              <td class="span3">Notes :</td>
              <td class="span5"><%= @commodity.commodity_notes %></td>
            </tr>

            <tr>
              <td class="span3">Active :</td>
              <td class="span5"><%= @commodity.commodity_active %></td>
            </tr>
        </tbody>
    </table>

  <div class="form-actions">
    <%= link_to 'Edit', edit_commodity_path(@commodity), :class => "btn btn-small" %>
    <%= link_to 'Back to Commodities', commodities_path, :class => "btn btn-small" %>
  </div>
</div>