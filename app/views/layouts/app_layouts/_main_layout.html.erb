<!-- Main Container Fluid -->
<div class="container-fluid fixed menu-left">
    
    <!-- Top Menu -->
    <%= render :partial => 'layouts/app_layouts/top_menu' %>
    
    <!-- Sidebar menu & content wrapper -->
    <div id="wrapper">

        <!-- Side Menu -->
        <%= render :partial => 'layouts/app_layouts/side_menu' %> 

        <!-- Content -->
        <div id="content">
            <p></p>            
            <div class="innerLR">  
                <% if notice && notice.class.name == "Hash" %>
                    <% if notice[:method] == "error" %><p id="notice" class="alert alert-error"><%= notice[:message] %></p><% end %>
                <% elsif notice %>
                        <p id="notice" class="alert alert-primary"><%= notice %></p>
                <% end %>
                <%= yield %>
            </div>
        </div>
        <!-- // Content END -->
    </div>
    <!-- Sidebar menu & content wrapper END -->
           
    <div class="clearfix"></div>
                
    <div id="footer" class="hidden-print">            
        <!--  Copyright Line -->
        <div class="copy">
            &copy; <%= Date.today.year %> - <a href="#"><%= @home[:name] %></a> - All Rights Reserved.
        </div>
        <!--  End Copyright Line -->    
    </div>
    <!-- // Footer END -->     
</div>
<!-- // Main Container Fluid END -->