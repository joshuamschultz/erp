<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Territories</h4>
            <span class="span6 heading right">
                <%= link_to 'New Territory', new_territory_path, :class => "btn btn-mini btn-success" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>SLNO</th>
                <th>Name</th>
                <th>Description</th>
                <th>Zip</th>
                <th>Active</th>
                <th></th>
              </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report", :path => territories_path,
        :columns => '[
                        { "mData": "id" },
                        { "mData": "territory_identifier" },
                        { "mData": "territory_description" },
                        { "mData": "territory_zip" },
                        { "mData": "territory_active" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>