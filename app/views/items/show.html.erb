<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Item Info</h4>
  </div>
  <table class="table table-striped table-bordered">
    <tbody> 
      <tr>
        <td>Owner:</td>
        <td><%= @item.owner.owner_identifier %></td>
      </tr>

      <tr>
        <td>Part No:</td>
        <td><%= @item.item_part_no %></td>
      </tr>

      <tr>
        <td>Name:</td>
        <td><%= @item.item_name %></td>
      </tr>

      <tr>
        <td>Description:</td>
        <td><%= @item.item_description %></td>
      </tr>

      <tr>
        <td>Notes:</td>
        <td><%= @item.item_notes %></td>
      </tr>

      <tr>
        <td>Revision:</td>
        <td><%= @item.item_revision %></td>
      </tr>

      <tr>
        <td>Revision Date:</td>
        <td><%= @item.item_revision_date %></td>
      </tr>

      <tr>
        <td>Tooling:</td>
        <td><%= @item.item_tooling %></td>
      </tr>

      <tr>
        <td>Cost:</td>
        <td><%= @item.item_cost %></td>
      </tr>

      <tr>
        <td>Quantity On Order:</td>
        <td><%= @item.item_quantity_on_order %></td>
      </tr>

      <tr>
        <td>Quantity In Hand:</td>
        <td><%= @item.item_quantity_in_hand %></td>
      </tr>

      <tr>
        <td>Active:</td>
        <td><%= @item.item_active %></td>
      </tr>     
    </tbody>
  </table>

    <div class="form-actions">
    <%= link_to 'Edit', edit_item_path(@item), :class => "btn btn-small" %> 
    <%= link_to 'Back to Items', items_path, :class => "btn btn-small" %>
  </div>
</div>