                    <h5><strong>$<%= @item.weighted_cost %></strong></h5>
                    <span class="txt"><strong>Weighted Cost</strong></span>
                    <div class="clearfix"></div>
                </a>
            </div>

        <% end %>





            <div class="span2 well">
                <a class="widget-stats" href="<%= quality_lots_path(:item_id => @item.id) %>" id="">
