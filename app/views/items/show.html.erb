                                <%= render :partial => 'payables/item_payables' %>
                            </div>
                        <% end %>

                        <% if can? :view, Receivable %>  
                            <div class="span6">
                            <%= render :partial => 'receivables/item_receivables' %>
                            </div>
                        <% end %>        
                    </div>
                </div>

