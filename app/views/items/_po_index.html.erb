<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Purchase Orders</h4>
            <span class="span6 heading right">
                <%= link_to "New Purchase Order", new_po_header_path, :class => "btn btn-mini btn-success" %>
            </span>
        </div>
    </div>
    <div class="widget-body">
      <table id="po_header" class="dynamicTable table table-striped table-bordered table-condensed">
        <thead>
            <tr>
                <th>PO Number</th>
                <th>Type</th>
                <th>Vendor</th>
                <th>Cost</th>
                <th>Quantity Ordered</th>
            </tr>
        </thead>
        <tbody>
            <% @po_lines.each do |po_item| %>
              <tr>
                <td><%= link_to po_item.po_header.po_identifier, po_header_path(po_item) %></td>
                <td><%= po_item.po_header.po_type.type_name %></td>
                <td><%= po_item.po_header.organization.organization_name%></td>
                <td><%= po_item.po_line_cost %></td>
                <td><%= po_item.po_line_quantity %></td>
              </tr>
            <% end %>
        </tbody>
      </table>
    </div>
</div>

<script type="text/javascript">
   var datapo_header;
   $(document).ready(function(){
       datapo_header = $('#po_header').dataTable();
     });


</script>
