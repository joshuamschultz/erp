<h1>Listing receivables</h1>

<table>
  <tr>
    <th>Organization</th>
    <th>So header</th>
    <th>Receivable identifier</th>
    <th>Receivable description</th>
    <th>Receivable cost</th>
    <th>Receivable discount</th>
    <th>Receivable total</th>
    <th>Receivable notes</th>
    <th>Receivable status</th>
    <th>Receivable active</th>
    <th>Receivable created</th>
    <th>Receivable updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @receivables.each do |receivable| %>
  <tr>
    <td><%= receivable.organization %></td>
    <td><%= receivable.so_header %></td>
    <td><%= receivable.receivable_identifier %></td>
    <td><%= receivable.receivable_description %></td>
    <td><%= receivable.receivable_cost %></td>
    <td><%= receivable.receivable_discount %></td>
    <td><%= receivable.receivable_total %></td>
    <td><%= receivable.receivable_notes %></td>
    <td><%= receivable.receivable_status %></td>
    <td><%= receivable.receivable_active %></td>
    <td><%= receivable.receivable_created_id %></td>
    <td><%= receivable.receivable_updated_id %></td>
    <td><%= link_to 'Show', receivable %></td>
    <td><%= link_to 'Edit', edit_receivable_path(receivable) %></td>
    <td><%= link_to 'Destroy', receivable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

