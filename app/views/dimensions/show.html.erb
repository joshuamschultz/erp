<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Dimension Type Info</h4>
  </div>
    <table class="table table-striped table-bordered">
      <tbody>
        <tr>
          <td>Identifier:</td>
          <td><%= @dimension.dimension_identifier %></td>
        </tr>

        <tr>
          <td>Description:</td>
          <td><%= @dimension.dimension_description %></td>
        </tr>

        <tr>
          <td>Notes:</td>
          <td><%= @dimension.dimension_notes %></td>
        </tr>

        <tr>
          <td>Active:</td>
          <td><%= @dimension.dimension_active %></td>
        </tr>
      </tbody>
    </table>

   <div class="form-actions">
  <% if can? :edit, Dimension %>
    <%= link_to 'Edit', edit_dimension_path(@dimension), :class => "btn"%> 
  <% end %>
    
    <%= link_to 'Back to Dimension Types', dimensions_path, :class =>"btn" %>
  </div>
</div>
