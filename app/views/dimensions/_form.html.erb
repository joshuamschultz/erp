<%= simple_form_for(@dimension, :html => {:id => "form_for_dimension", :class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :dimension_identifier, :label => "Name", :autofocus => true %>
    <%= f.input :dimension_description, :label => "Description" %>
    <%= f.association :gauge, :label => "Instrument", :label_method => 'gauge_tool_name', :label_value => "id", :include_blank => false %>  
    <%= f.input :dimension_notes, :label => "Notes" %>
    <%= f.input :dimension_active, :label => "Active" %>   
    <%= hidden_field_tag :item_id, params[:item_id] %>   
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Submit", :class =>"btn" %>

     <%= link_to 'Delete', dimension_path(@dimension), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn" unless @dimension.new_record? %>

    <%= link_to 'Back to Dimension Types', dimensions_path,:class =>"btn" %>

    <%= link_to 'Back to Item', "/items/" + params[:item_id], :class => "btn" if params[:item_id] %>
  </div>
<% end %>

<script type="text/javascript">
    tab_field_forms["form_for_dimension"] = ["dimension_dimension_identifier", "dimension_dimension_description", "dimension_gauge_id", "dimension_dimension_notes", "dimension_dimension_active"];
</script>