<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Dimension Types</h4>
            <span class="span6 heading right">
                <% if can? :edit, Dimension %>
                    <%= link_to 'New Dimension Type', new_dimension_path, :class => "btn btn-mini btn-success" %>   <% end %>              
            </span>
        </div> 
    </div>
    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Notes</th>
                <th>Active</th>    
                <th></th>
              </tr>
            </thead>
            <tbody>
                
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report",  :path => dimensions_path, :extras => {:slno => false},
        :columns => '[
                        { "mData": "dimension_identifier" },
                        { "mData": "dimension_description" },
                        { "mData": "dimension_notes", "bVisible": false },
                        { "mData": "dimension_active" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>