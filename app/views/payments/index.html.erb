<h1>Listing payments</h1>

<table>
  <tr>
    <th>Organization</th>
    <th>Payment type</th>
    <th>Payment check code</th>
    <th>Payment check amount</th>
    <th>Payment check no</th>
    <th>Payment identifier</th>
    <th>Payment description</th>
    <th>Payment notes</th>
    <th>Payment status</th>
    <th>Payment active</th>
    <th>Payment created</th>
    <th>Payment updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @payments.each do |payment| %>
  <tr>
    <td><%= payment.organization %></td>
    <td><%= payment.payment_type_id %></td>
    <td><%= payment.payment_check_code %></td>
    <td><%= payment.payment_check_amount %></td>
    <td><%= payment.payment_check_no %></td>
    <td><%= payment.payment_identifier %></td>
    <td><%= payment.payment_description %></td>
    <td><%= payment.payment_notes %></td>
    <td><%= payment.payment_status %></td>
    <td><%= payment.payment_active %></td>
    <td><%= payment.payment_created_id %></td>
    <td><%= payment.payment_updated_id %></td>
    <td><%= link_to 'Show', payment %></td>
    <td><%= link_to 'Edit', edit_payment_path(payment) %></td>
    <td><%= link_to 'Destroy', payment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

