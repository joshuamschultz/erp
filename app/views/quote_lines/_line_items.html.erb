<% show_buttons = true if show_buttons.nil? %>
<% bfilter = true if show_buttons.nil? %>
<% drop_down = true if drop_down.nil? %>

<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Quote Line Items</h4>
            <span class="span6 heading right">
                <%= link_to 'Edit', new_quote_quote_line_path(@quote), :class => "btn btn-mini btn-success" if show_buttons %>  
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->
    <div class="widget-body">
        <table id="table_report_quote_line_list" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
                <tr>     
                    <th>Quote ID</th>              
                    <th>Part No</th>
                    <th>Quantity</th>
                    <!-- <th>Cost</th> -->
                    <!-- <th>Total</th> -->
                    <!-- <th>Customer</th> -->
                    <!-- <th>Customer PO</th> -->
                    <th></th>
                </tr>
            </thead>
            <tbody>                
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report_quote_line_list", :path => quote_quote_lines_path(@quote), :extras => {:slno => false, :bfilter => bfilter, :blenghchange => drop_down },
        :columns => '[
                        { "mData": "id" },
                        { "mData": "item_part_no" },
                        { "mData": "quote_line_quantity" },
                    
                        { "mData": "links", "bSortable": false, "bSearchable": false, "bVisible": '+show_buttons.to_s+' }
                    ]'
    } 
%>