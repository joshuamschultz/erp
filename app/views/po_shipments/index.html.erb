<%= render :partial => 'layouts/app_layouts/contents', :locals => {type: "shipment_header"} %>

<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">PO Received</h4>
            <span class="span6 heading right">
                <%#= link_to 'New Shipment', new_po_shipment_path, :class => "btn btn-mini btn-success" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="po_shipment_table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>PO</th>
                <th>Part No</th>
                <th>Customer</th>
                <th>Quantity Ordered</th>
                <th>Total Received</th>
                <th>Received</th>
                <th>Shelf</th>
                <th>Unit</th>
                <th>Received At</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
                
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "po_shipment_table_report", :path => po_shipments_path, :extras => {:slno => false}, 
        :columns => '[
                        { "mData": "po_identifier" },
                        { "mData": "item_part_no" },
                        { "mData": "customer_name" },
                        { "mData": "po_line_quantity" },
                        { "mData": "po_line_quantity_shipped" },
                        { "mData": "po_shipped_count" },
                        { "mData": "po_shipped_shelf" },
                        { "mData": "po_shipped_unit" },
                        { "mData": "po_shipped_date" },
                        { "mData": "links", "bportable": false, "bSearchable": false }  
                    ]'
    } 
%>