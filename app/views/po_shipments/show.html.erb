<div class="row-fluid span8">
    <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>PO Received Info</h4>
    </div>
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
              <td class="span2">ID: </td>
              <td class="span5"><%= @po_shipment.id %></td>
            </tr>

            <tr>
              <td class="span3">Count: </td>
              <td class="span5"><%= @po_shipment.po_shipped_count %></td>
            </tr>

            <tr>
              <td class="span3">Shelf: </td>
              <td class="span5"><%= @po_shipment.po_shipped_shelf %></td>
            </tr>

            <tr>
              <td class="span3">Unit: </td>
              <td class="span5"><%= @po_shipment.po_shipped_unit %>%</td>
            </tr>
        </tbody>
    </table>

  <div class="form-actions">
    <%= link_to 'Edit', edit_po_shipment_path(@po_shipment), :class => "btn btn-small" %>
    <%= link_to 'Back to po Shipments', po_shipments_path, :class => "btn btn-small" %>
  </div>
</div>