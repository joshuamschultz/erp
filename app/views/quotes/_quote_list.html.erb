<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Quotes</h4>
            <span class="span6 heading right">
                <%= link_to 'New Quote', new_quote_path, :class => "btn btn-mini btn-success" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->
    <div class="widget-body">
        <table id="table_report_quote_list" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Vendor</th>
                    <th>Description</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>                
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {:name => "table_report_quote_list", :path => quotes_path, :extras => {:slno => false},
        :columns => '[
                        { "mData": "vendor_name" },
                        { "mData": "quote_description" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>
