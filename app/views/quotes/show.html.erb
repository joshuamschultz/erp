<div class="row-fluid">
    <h4 class="span3 left">Quote Info<span></span></h4>
    <span class="span9 right">
        <%#= link_to 'Edit', edit_quote_path(@quote), :class => "btn btn-small" unless @quote.organization %>    
        <%= link_to 'Back', quotes_path, :class => "btn btn-small" %>
    </span>
</div>

<div class="row-fluid">
    <%= render :partial => 'quotes/quote_info', locals: { show_quote_to: false, show_send: true } %>
    <div class="span4 ">
        <%= link_to 'Send', "#", :class => "btn btn-small btn-success", :onclick => "onclick_send()" %>  
    </div>
    <div class="span8">
        <%= render :partial => 'quote_lines/line_items', locals: { show_buttons: true } %>   
    </div>
</div>

<div class="separator bottom"></div>

<% @quote.quote_vendors.each do |quote_vendor| %>
    <div class="well">
        <div class="separator bottom"></div>
        <%= render :partial => 'quote_lines/vendor_lines', locals: {quote_vendor: quote_vendor, quote: @quote, edit_page: false} %>
        <%= render :partial => 'attachments/attachement_without_instance', locals: { attachable: quote_vendor }%>        
    </div>
    <div class="separator bottom"></div>
    <div class="separator bottom"></div>
    <br>
<% end %>

 <!-- unless @quote.organization -->
<!-- , locals: {show_buttons: !@quote.organization.present? } -->

<div class="separator bottom"></div>

<!-- Attachments -->
<%= render 'attachments/attachments' %>

<div class="separator bottom"></div>

<!-- Comments -->
<%= render :partial => 'comments/comments', 
:locals => {:extras => {:link => populate_quote_path(type: "note")}} %>

<script type="text/javascript">
    function onclick_send(){
        initialize_api_call({"url": "/common_actions/get_info", "type": "GET", "data_type": "json", "params": {"mode": "send_quotes_mail", "quote_id": <%= @quote.id %>}}, "after_send", {});
    }
    
    function after_send(){
        // alert("sucess")
    }
</script>