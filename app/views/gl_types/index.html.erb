<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">GL Types</h4>
            <span class="span6 heading right">
                <%= link_to 'GL Accounts', gl_accounts_path, :class => "btn btn-mini btn-success" %>
                <%= link_to 'New GL Type', new_gl_type_path, :class => "btn btn-mini btn-success" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>Type</th>
                <th>Report</th>
                <th>Side</th>
                <th>Report</th>
                <th>Description</th>
                <th>Active</th>
                <th></th>
              </tr>
            </thead>

            <tbody>
                
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report", :path => gl_types_path, :extras => {:slno => false, :sorted => 1},
        :columns => '[
                        { "mData": "gl_name" },
                        { "mData": "gl_report" },
                        { "mData": "gl_side" },
                        { "mData": "gl_description"},
                        { "mData": "gl_active" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
