<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>GL Type Info</h4>
  </div>
    <table class="table table-striped table-bordered">
      <tbody>
          <tr>
            <td>Gl Type Title:</td>
            <td><%= @gl_type.gl_name %></td>
          </tr>

          <tr>
            <td>GL Side:</td>
            <td><%= @gl_type.gl_side %></td>
          </tr>

          <tr>
            <td>GL Report:</td>
            <td><%= @gl_type.gl_report %></td>
          </tr>        

          <tr>
            <td>Description:</td>
            <td><%= @gl_type.gl_description %></td>
          </tr>

          <tr>
            <td>Active:</td>
            <td><%= @gl_type.gl_active %></td>
          </tr>
      </tbody>
    </table>

   <div class="form-actions">
    <%= link_to 'Edit', edit_gl_type_path(@gl_type), :class => "btn"%>    
    <%= link_to 'GL Types', gl_types_path, :class =>"btn" %>
  </div>
</div>