<h1>Listing receipts</h1>

<table>
  <tr>
    <th>Organization</th>
    <th>Receipt type</th>
    <th>Receipt check code</th>
    <th>Receipt check amount</th>
    <th>Receipt check no</th>
    <th>Receipt identifier</th>
    <th>Receipt description</th>
    <th>Receipt notes</th>
    <th>Receipt status</th>
    <th>Receipt active</th>
    <th>Receipt created</th>
    <th>Receipt updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @receipts.each do |receipt| %>
  <tr>
    <td><%= receipt.organization %></td>
    <td><%= receipt.receipt_type_id %></td>
    <td><%= receipt.receipt_check_code %></td>
    <td><%= receipt.receipt_check_amount %></td>
    <td><%= receipt.receipt_check_no %></td>
    <td><%= receipt.receipt_identifier %></td>
    <td><%= receipt.receipt_description %></td>
    <td><%= receipt.receipt_notes %></td>
    <td><%= receipt.receipt_status %></td>
    <td><%= receipt.receipt_active %></td>
    <td><%= receipt.receipt_created_id %></td>
    <td><%= receipt.receipt_updated_id %></td>
    <td><%= link_to 'Show', receipt %></td>
    <td><%= link_to 'Edit', edit_receipt_path(receipt) %></td>
    <td><%= link_to 'Destroy', receipt, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

