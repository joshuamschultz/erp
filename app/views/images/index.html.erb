<h1>Listing images</h1>

<table>
  <tr>
    <th>Imageable</th>
    <th>Imageable type</th>
    <th>Image title</th>
    <th>Image description</th>
    <th>Image notes</th>
    <th>Image file name</th>
    <th>Image file size</th>
    <th>Image content type</th>
    <th>Image public</th>
    <th>Image active</th>
    <th>Image created</th>
    <th>Image updated</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @images.each do |image| %>
  <tr>
    <td><%= image.imageable_id %></td>
    <td><%= image.imageable_type %></td>
    <td><%= image.image_title %></td>
    <td><%= image.image_description %></td>
    <td><%= image.image_notes %></td>
    <td><%= image.image_file_name %></td>
    <td><%= image.image_file_size %></td>
    <td><%= image.image_content_type %></td>
    <td><%= image.image_public %></td>
    <td><%= image.image_active %></td>
    <td><%= image.image_created_id %></td>
    <td><%= image.image_updated_id %></td>
    <td><%= link_to 'Show', image %></td>
    <td><%= link_to 'Edit', edit_image_path(image) %></td>
    <td><%= link_to 'Destroy', image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

