<%= simple_form_for(@image) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :imageable_id %>
    <%= f.input :imageable_type %>
    <%= f.input :image_title %>
    <%= f.input :image_description %>
    <%= f.input :image_notes %>
    <%= f.input :image_file_name %>
    <%= f.input :image_file_size %>
    <%= f.input :image_content_type %>
    <%= f.input :image_public %>
    <%= f.input :image_active %>
    <%= f.input :image_created_id %>
    <%= f.input :image_updated_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
