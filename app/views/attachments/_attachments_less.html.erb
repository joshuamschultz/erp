<% if user_signed_in? &&  !current_user.is_vendor? %>

    <!-- Widget -->
    <div class="widget widget-004">
        <!-- Widget heading -->
        <div class="widget-head">
            <div class="row-fluid">
                <h4 class="span6 heading">Attachments</h4>
                <span class="span6 heading right">
                    <%= link_to 'New Attachment', new_attachment_path(attachable_type: @attachable.class.name, attachable_id: @attachable.id), :class => "btn btn-mini btn-success" %>
                    <%#= link_to 'Back', @attachable.redirect_path, :class =>"btn" %>
                </span>
            </div> 
        </div>
        <!-- // Widget heading END -->

        <div class="widget-body">
            <table id="table_report_attachments" class="dynamicTable table table-striped table-bordered table-condensed">
                <thead>
                  <tr>
                    <th>Name</th>
                    <th>Public</th>
                    <th>Uploaded Date</th>
                    <th>Uploaded By</th>
                    <th></th>
                  </tr>
                </thead>

                <tbody>

                </tbody>
            </table>
        </div>
    </div>

    <%= render :partial => 'layouts/app_layouts/data_table', :locals => 
        {:name => "table_report_attachments", :path => attachments_path(attachable_type: @attachable.class.name, attachable_id: @attachable.id, :hide_info => true),:extras => {:slno => false}, 
            :columns => '[
                            { "mData": "attachment_name" },
                            { "mData": "attachment_public" },
                            { "mData": "uploaded_date", "bVisible": false },
                            { "mData": "uploaded_by" },
                            { "mData": "links" }
                        ]'
        } 
    %>
<% end %>
