<!-- Attachment -->
<div class="row-fluid span8">
  <%= render 'attachments/attachment_info' %>
  <div class="form-actions">
      <%= link_to 'Attachment', @attachment.attachment.url(:original), :class => "btn btn-small", :target => "_blank" %> 
      <%= link_to 'Edit', edit_attachment_path(@attachment), :class => "btn btn-small"%> 
      <%= link_to 'Delete', attachment_path(@attachment), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-small" %>
      <%= link_to 'Back', @attachment.attachable.redirect_path, :class => "btn btn-small" %>
  </div>
</div>