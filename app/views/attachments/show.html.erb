<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Attachment Info</h4>
  </div>
  <table class="table table-striped table-bordered">
    <tbody> 
      <tr>
        <td>Title:</td>
        <td><%= @attachment.attachment_revision_title %></td>
      </tr>

       <tr>
        <td>Revision Date:</td>
        <td><%= @attachment.attachment_revision_date %></td>
      </tr>

      <tr>
        <td>Description:</td>
        <td><%= @attachment.attachment_description %></td>
      </tr>

      <tr>
        <td>Attachment file name:</td>
        <td><%= @attachment.attachment_file_name %></td>
      </tr>

      <tr>
        <td>Attachment public:</td>
        <td><%= @attachment.attachment_public %></td>
      </tr>

    </tbody>
  </table>
  <div class="form-actions">
    <%= link_to 'Edit', edit_attachment_path(@attachment), :class => "btn btn-small"%> 
    <%= link_to 'Back', @attachment.attachable.redirect_path, :class => "btn btn-small" %>
  </div>
</div>