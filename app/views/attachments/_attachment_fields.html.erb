<%= f.hidden_field :attachable_id %>
<%= f.hidden_field :attachable_type %>
<%= f.input :attachment_name, label: "Name", :autofocus => true %>
<%= f.input :attachment_description, label: "Description" %>
<%= f.input :attachment_revision_title, label: "Revision" %>
<%= f.input :attachment_revision_date, label: "Revision Date", as: "string" %>

<%#= f.input :attachment_notes, label: "Notes" %>

<div class="control-group file required attachment_attachment">
    <label class="control-label">Choose File <br/><span style="color:#BD362F;">(If changed/new)</span></label>
    <div class="controls">
          <div data-provides="fileupload" class="fileupload fileupload-exists">
              <span class="btn btn-default btn-file">
                  <span class="fileupload-new">Browse</span>
                  <span class="fileupload-exists">Browse</span>
                  <%= f.file_field :attachment %>
              </span>
              <span class="fileupload-preview"></span>
              <a style="float: none" data-dismiss="fileupload" class="close fileupload-exists" href="#">Ã—</a>
          </div>
          <div><%= @attachment.attachment_url("link") if @attachment && @attachment.persisted? %>
          </div>
    </div>
</div>

<%= f.input :attachment_public, label: "Public" %>
<%= f.input :attachment_active, label: "Active" ,:input_html => { :checked => true }%>



 <%#= "error" if @attachment && @attachment.errors && @attachment.errors[:attachment] != [] %>
