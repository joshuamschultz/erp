<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Attachments</h4>
            <span class="span6 heading right">
                <%= link_to 'New Attachment', new_attachment_path(attachable_type: @attachable.class.name, attachable_id: @attachable.id), :class => "btn btn-mini btn-success" %>
                <%#= link_to 'Back', @attachable.redirect_path, :class =>"btn" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="table_report_attachments" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>File ID</th>
                <th>Name</th>
                <th>Revision</th>
                <th>Effective Date</th>
                <th>Description</th>
                <th>Notes</th>
                <th>Public</th>
                <th>Status</th>
                <th>Active</th>
                <th>Uploaded Date</th>
                <th>Uploaded By</th>
                <th>Approved By</th>
                <th></th>
              </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {:name => "table_report_attachments", :path => attachments_path(attachable_type: @attachable.class.name, attachable_id: @attachable.id),:extras => {:slno => false}, 
        :columns => '[
                        { "mData": "id" },
                        { "mData": "attachment_name" },
                        { "mData": "attachment_revision_title" },
                        { "mData": "effective_date" },
                        { "mData": "attachment_description", "bVisible": false },
                        { "mData": "attachment_notes", "bVisible": false },
                        { "mData": "attachment_public" },
                        { "mData": "attachment_status", "bVisible": false },
                        { "mData": "attachment_active", "bVisible": false },
                        { "mData": "uploaded_date", "bVisible": false },
                        { "mData": "uploaded_by" },
                        { "mData": "approved_by", "bVisible": false },
                        { "mData": "links" }
                    ]'
    } 
%>

