  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Attachment Info</h4>
  </div>
  <table class="table table-striped table-bordered">
    <tbody> 
      <tr>
        <td>File ID:</td>
        <td><%= @attachment.id %></td>
      </tr>

      <tr>
        <td>Name:</td>
        <td><%= @attachment.attachment_name %></td>
      </tr>

      <tr>
        <td>Revision:</td>
        <td><%= @attachment.attachment_revision_title %></td>
      </tr>

       <tr>
        <td>Effective Date:</td>
        <td><%= @attachment.attachment_revision_date.strftime("%m-%d-%Y") %></td>
      </tr>

      <tr>
        <td>Description:</td>
        <td><%= @attachment.attachment_description %></td>
      </tr>

      <tr>
        <td>Public:</td>
        <td><%= @attachment.attachment_public %></td>
      </tr>

      <tr>
        <td>Status:</td>
        <td><%= @attachment.attachment_status %></td>
      </tr>

      <tr>
        <td>Active:</td>
        <td><%= @attachment.attachment_active %></td>
      </tr>

      <tr>
        <td>Uploaded Date:</td>
        <td><%= @attachment.created_at.strftime("%m-%d-%Y") %></td>
      </tr>

      <tr>
        <td>Uploaded By:</td>
        <td><%= @attachment.created_by ? @attachment.created_by.name : "" %></td>
      </tr>

      <tr>
        <td>Approved By:</td>
        <td><%= "" %></td>
      </tr>

    </tbody>
  </table>
