  <!-- Wells -->
<div class="row-fluid">
    <h4 class="span8 left">Dimension Analysis Info<span></span></h4>
    <span class="span4 right">
        <%= link_to 'Back', quality_lot_dimensions_path, :class => "btn" %>
    </span>
</div>

<div class="row-fluid">
    <div class="span4">

      <table class="table table-striped table-bordered">
        <tbody>
            <tr>
              <td class="span2">Lot:</td>
              <td class="span5"><%= CommonActions.linkable(quality_lot_path(@quality_lot_dimension.quality_lot), @quality_lot_dimension.quality_lot.lot_with_part_no).html_safe %></td>
            </tr>

            <tr>
              <td class="span3">Dimension:</td>
              <td class="span5"><%= CommonActions.linkable(item_item_revision_item_part_dimension_path(@quality_lot_dimension.item_part_dimension.item_revision.item, @quality_lot_dimension.item_part_dimension.item_revision, @quality_lot_dimension.item_part_dimension), @quality_lot_dimension.item_part_dimension.item_part_letter).html_safe %></td>
            </tr>

            <tr>
              <td class="span3">Avg:</td>
              <td class="span5"><%= @quality_lot_dimension.all_lot_dimensions.sum(:lot_dimension_value)/@quality_lot_dimension.all_lot_dimensions.count %></td>
            </tr>

           <tr>
              <td class="span3">Std:</td>
              <td class="span5"><%= 0 %></td>
            </tr>

            <tr>
              <td class="span3">Max:</td>
              <td class="span5"><%= @quality_lot_dimension.all_lot_dimensions.maximum(:lot_dimension_value) %></td>
            </tr>

            <tr>
              <td class="span3">Min:</td>
              <td class="span5"><%= @quality_lot_dimension.all_lot_dimensions.minimum(:lot_dimension_value) %></td>
            </tr>

            <tr>
              <td class="span3">Status:</td>
              <td class="span5"><%= @quality_lot_dimension.lot_dimension_status %></td>
            </tr>

        </tbody>
    </table>

    </div>

    <div class="span8">
        <%= render 'lot_dimension_tests' %>
    </div>
</div>