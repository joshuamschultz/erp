  <!-- Wells -->
<div class="row-fluid">
    <h4 class="span3 left">PO Info</h4>
    <span class="span9 right">
        <%= link_to 'Edit', edit_po_header_path(@po_header), :class => "btn btn-small" %>
        <%= link_to 'Back', po_headers_path, :class => "btn btn-small" %>
    </span>
</div>

<div class="row-fluid">
    <div class="span3 well item_detail_view">
        <table class="table">
            <tbody>
                <tr>
                  <td class="span2">Type:</td>
                  <td class="span5"><%= @po_header.po_type.type_name %></td>
                </tr>

                <tr>
                  <td class="span3">Total:</td>
                  <td class="span5">$<%= @po_header.po_total.to_f %></td>
                </tr>

                <tr>
                  <td class="span3">Status:</td>
                  <td class="span5"><%= @po_header.po_status %></td>
                </tr>

                <tr>
                  <td class="span3">Notes:</td>
                  <td class="span5"><%= @po_header.po_notes %></td>
                </tr>

                <!-- <tr>
                  <td class="span3">Active :</td>
                  <td class="span5"><%#= @po_header.po_active %></td>
                </tr> -->
            </tbody>
        </table>

        <div class="separator bottom"></div>
        <div class="separator bottom"></div>

        <h4 class="center">Vendor Info</h4>

        <div class="separator bottom"></div>

        <%= render :partial => 'organizations/organization_info', 
        :locals => {:organization => @po_header.organization} %>
    </div>

    <div class="span9">
        <div class="row-fluid">
            <div class="span4 well">
                  <a class="widget-stats" href="#" id="alt_address_btn">
                      <span class="glyphicons message_out"><i></i></span>
                      <span class="txt">Send</span>
                      <div class="clearfix"></div>
                  </a>
            </div>

            <div class="span4 well">
                  <a class="widget-stats" href="#" id="contacts_btn">
                      <span class="glyphicons print"><i></i></span>
                      <span class="txt">Print</span>
                      <div class="clearfix"></div>
                  </a>
            </div>

            <div class="span4 well">
                  <a class="widget-stats" href="#" id="contacts_btn">
                      <span class="glyphicons notes_2"><i></i></span>
                      <span class="txt">Add Quote</span>
                      <div class="clearfix"></div>
                  </a>
            </div>
        </div>

        <!-- Line Items -->
        <%= render 'po_lines/line_items' %>
    </div>
</div>

<div class="separator bottom"></div>

<!-- Attachments -->
<%= render 'attachments/attachments' %>


<div class="separator bottom"></div>


<%= render :partial => 'comments/comments', 
:locals => {:extras => {:link => populate_po_header_path(type: "note")}} %>