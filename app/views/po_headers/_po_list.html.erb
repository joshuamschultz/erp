
<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Purchase Orders <%= @organization.purchase_order_title if @organization %> <%= "For Selected Revision" if @item_revision %> </h4>
            <span class="span6 heading right">
                <%= link_to 'All', all_path, :class => "btn btn-mini btn-success" %>
                <%= link_to 'Open', open_path, :class => "btn btn-mini btn-success" %>
                <%= link_to 'Closed', closed_path, :class => "btn btn-mini btn-success" %>
                <%= link_to 'New PO', new_path, :class => "btn btn-mini btn-success" %>                
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->
    <div class="widget-body">
        <table id="table_report_po_header_list" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>PO ID</th>
                    <th>PO Type</th>
                    <th>Vendor</th>
                    <th>Identifier</th>
                    <th>Description</th>
                    <th>Total</th>
                    <th>Status</th>
                    <!-- <th>Notes</th> -->
                    <th>Active</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>                
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report_po_header_list", :path => index_path, :extras => {:slno => false},
        :columns => '[
                        { "mData": "po_id" },
                        { "mData": "po_type_name" },
                        { "mData": "vendor_name" },
                        { "mData": "po_identifier", "bVisible": false },
                        { "mData": "po_description", "bVisible": false },
                        { "mData": "po_total", "bVisible": false },
                        { "mData": "po_status" },
                        { "mData": "po_active", "bVisible": false },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>

