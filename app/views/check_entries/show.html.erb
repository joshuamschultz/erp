<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Check Info</h4>
  </div>
    <table class="table table-striped table-bordered">
      <tbody>
          <tr>
            <td>Title:</td>
            <td><%= @check_entry.check_identifier %></td>
          </tr>

          <tr>
            <td>Code:</td>
            <td><%= @check_entry.check_code %></td>
          </tr>

          <tr>
            <td>Used:</td>
            <% check_data = @check_entry.check_belongs_to %>
            <td><%= check_data.nil? ? "No" : CommonActions.linkable(check_data[:object].redirect_path, check_data[:type] + " : " + check_data[:name]).html_safe %></td>
          </tr>
      </tbody>
    </table>

   <div class="form-actions">
    <%= link_to 'Edit', edit_check_entry_path(@check_entry), :class => "btn"%>
    <%= link_to 'Back to Checks', check_entries_path, :class =>"btn" %>
  </div>
</div>