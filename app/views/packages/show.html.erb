            <tr></tr>
            <tr align="left" valign="top" class="color-02">
                <td>Date</td>
                <td>Packaging Contact</td>
                <td>Part Number</td>
                <td>Supplier Responsibilities Completed?</td>
            </tr>
            <tr align="left" valign="top">
                <td>&nbsp;</td>
                <td>&nbsp;</td>
                <td><%= link_to(@package.quality_lot.po_line.item_alt_name.item_alt_identifier, item_path(@package.quality_lot.item_revision.item, revision_id: @package.quality_lot.item_revision_id)) if @package.quality_lot.item_revision %> </td>
