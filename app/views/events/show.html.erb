<p id="notice"><%= notice %></p>
 <table class="table table-striped table-bordered">
        <tbody>
            <tr>
              <td class="span2"><b>Title:</b></td>
              <td class="span5"><%= @event.title %></td>
             </tr>
             <tr>
              <td class="span2"><b>Description:</b></td>
              <td class="span5"><%= @event.description %></td>              
            </tr>
             <tr>                       
              <td class="span2"><b>Start At:</b></td>
              <td class="span5"><%= @event.start_at %></td>
             </tr>
             <tr>
              <td class="span2"><b>End At:</b></td>
              <td class="span5"><%= @event.end_at %></td>              
            </tr>            
            <tr>
              <td class="span2"><b>Repeat:</b></td>
              <td class="span5"><%= @event.repeats %></td>              
            </tr>
        </tbody>
    </table>

<table class="table">
<tbody><tr>
<td><%= link_to 'Edit', edit_event_path(@event), :class=>"btn btn-block btn-primary"%></td>
