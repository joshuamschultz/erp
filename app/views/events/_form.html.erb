<div class="widget">
  <div class="widget-head">
    <h4 class="heading">Event</h4>
  </div>
  <div class="widget-body">     
    <div class="row-fluid">      
        <div class="span6 events_datetime">              
          <%= form_for(@event) do |f| %>  
          <div class="control-group">
            <label for="firstname" class="control-label">Title</label>
            <div class="controls"><%= f.text_field :title, :class=>"span12" %></div>
          </div>
          <div class="control-group">
            <label for="lastname" class="control-label">Description</label>
            <div class="controls"><%= f.text_area :description, :class=>"span12" %> </div>
          </div>          
          <div class="control-group">
            <label for="username" class="control-label">Start At</label>
            <div class="controls "><%= f.datetime_select :start_at, :class=>"span12", :default => Time.zone.now%></div>
          </div>          
        </div>        
        <div class="span6 events_datetime">
          <div class="control-group">
            <label for="password" class="control-label">End At</label>
            <div class="controls"><%= f.datetime_select :end_at, :class=>"span12", :default => Time.zone.now %></div>
          </div>                          
        <div class="control-group">
          <label for="email" class="control-label">Repeats</label>
          <div class="controls rrr"><%= f.select :repeats, options_for_select([["Do not Repeat", ""], "Daily","Weekly", "Monthly", "Yearly"]), :class=>"span12 " %> </div>
        </div>
        <div class="control-group">
          <label for="frequency" class="control-label">No. Of Occurence</label>
          <div class="controls"><%= f.number_field :frequency, :class=>"span12" %></div>
        </div>
        <%= f.hidden_field :user_id, :value => current_user.id %>
      </div>      
    </div>        
    <hr class="separator">        
    <div class="form-actions">
      <%= f.submit 'Save',  :class=>"btn btn-icon btn-primary glyphicons circle_ok"  %>         
    </div>    
  <% end %> 
</div>
</div>

<style type="text/css">
 .events_datetime select {
    width: 95px;
  }
  .span12.e_rr {
    width: auto;
  }
  .rrr select {
    width: 200px !important;
  }
</style>
