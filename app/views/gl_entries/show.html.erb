<div class="row-fluid">
    <h4 class="span3 left">Journal Entry Info</h4>
    <span class="span9 right">
        <% if can? :edit, GlEntry %>
        <%= link_to 'Edit', edit_gl_entry_path(@gl_entry), :class => "btn btn-small" %>       
        <% end %>
        <%= link_to 'Back', gl_entries_path, :class => "btn btn-small" %>
    </span>
</div>

<div class="row-fluid">
    <div class="span3 well item_detail_view">
        <%= render :partial => 'gl_entries/gl_entry_info' %>
    </div>

    <div class="span9">
        <!-- Attachments -->
        <%= render 'attachments/attachments' %>      
    </div>
</div>


<div class="separator bottom"></div>

<!-- Comments -->
<%= render :partial => 'comments/comments', :locals => {:extras => {:link => populate_gl_entry_path(type: "note", id: @gl_entry.id)}} %>  