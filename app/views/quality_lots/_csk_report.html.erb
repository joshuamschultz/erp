<% @company_info = CompanyInfo.first %>

<div id="main-wrapper">

<div class="wrapper">
  <table width="100%" border="0" cellspacing="0" cellpadding="0">
    <tr align="left" valign="top">
      <td scope="row"><table width="100%" border="0" cellspacing="0" cellpadding="0">
        <tr align="left" valign="top">
          <td width="33%" scope="row"><table width="100%" border="0" cellspacing="0" cellpadding="0" class="no-bor">
            <tr>
              <td scope="row">Date</td>
              <td style="color:#000;"><%= Time.now.strftime("%m/%d/%Y") %></td>
              </tr>
            <tr>
              <td scope="row">Part Number</td>
              <td style="color:#000;"><%= @quality_lot.item_revision.item.item_part_no%></td>
              </tr>
            <tr>
              <td scope="row">Part Name</td>
              <td style="color:#000;"><%= @quality_lot.item_revision.item_name %></td>
              </tr>
            <tr>
              <td scope="row">Drawing No</td>
              <td style="color:#000;"><%= @quality_lot.item_revision.item.item_part_no%></td>
              </tr>
            <tr>
              <td colspan="2" scope="row"><table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td width="38%" scope="row">Drawing Rev Level</td>
                  <td width="11%" style="color:#000;"><%= @quality_lot.item_revision.item_revision_name %></td>
                  <td width="23%">Rev Date</td>
                  <td width="28%"><%= @quality_lot.item_revision.created_at.strftime("%m/%d/%Y") %></td>
                </tr>
              </table></td>
              </tr>
            <tr>
              <td scope="row">Supplier</td>
              <td style="color:#000;"><%= @company_info.company_name %></td>
              </tr>
            <tr>
              <td scope="row">P.O. Number</td>
              <td style="color:#000;"><%= @quality_lot.po_line.po_line_customer_po if @quality_lot.po_line.po_line_customer_po.present? %></td>
              </tr>
            </table></td>
          <td width="29%" align="center"><table width="100%" border="0" cellspacing="0" cellpadding="0">
            <tr>
              <td scope="row">The supplier is responsible for meeting all engineering and
quality requirements. Deviations from any engineering
specification or quality standard require prior written
authorization from Remington.</td>
              </tr>
            <tr>
              <td scope="row">&nbsp;</td>
              </tr>
            <tr>
              <td scope="row">&nbsp;</td>
              </tr>
            <tr>
              <td scope="row">Date: </td>
              </tr>
            </table></td>
          <td width="49%" class="df"><table width="100%" border="0" cellspacing="0" cellpadding="0"  >
            <tr class="df">
              <td scope="row"><table width="100%" border="0" cellspacing="0" cellpadding="0" >
                <tr class="df">
                  <td width="26%" align="left" valign="middle" scope="row"><form name="form1" method="post" action="">
                    <input type="checkbox" name="checkbox" id="checkbox">
                    <label for="checkbox">Vendor</label>
                    </form></td>
                  <td width="38%" align="center" valign="middle"><form name="form1" method="post" action="">
                    <input type="checkbox" name="checkbox2" id="checkbox2">
                    <label for="checkbox2">Customer</label>
                    </form></td>
                  <td width="33%" align="center" valign="middle"><form name="form1" method="post" action="">
                    <input type="checkbox" name="checkbox3" id="checkbox3">
                    <label for="checkbox3">Internal</label>
                    </form></td>
                  </tr>
                </table></td>
              </tr>
            <tr>
              <td scope="row">&nbsp;</td>
              </tr>
            <tr>
              <td scope="row"><table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr class="df">
                  <td width="67%" align="center" valign="middle" scope="row">&nbsp;</td>
                  <td width="33%" align="center" valign="middle"><form name="form1" method="post" action="">
                    <input type="checkbox" name="checkbox4" id="checkbox6">
                    <label for="checkbox6">Other</label>
                    </form></td>
                  </tr>
                </table></td>
              </tr>
            <tr>
              <td scope="row"><table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td width="33%" align="left" valign="middle" scope="row"><form name="form1" method="post" action="">
                    <input type="checkbox" name="checkbox6" id="checkbox4">
                    <label for="checkbox4">Cpk ANALYSIS APPROVED FOR USE</label>
                    </form></td>
                  </tr>
                <tr>
                  <td align="center" valign="middle" scope="row">&nbsp;</td>
                  </tr>
                </table></td>
              </tr>
            <tr>
              <td scope="row"><table width="100%" border="0" cellspacing="0" cellpadding="0">
                <tr>
                  <td width="33%" align="left" valign="middle" scope="row"><form name="form1" method="post" action="">
                    <input type="checkbox" name="checkbox5" id="checkbox5">
                    <label for="checkbox5">Cpk ANALYSIS REJECTED - DO NOT USE</label>
                    </form></td>
                  </tr>
                </table></td>
              </tr>
            </table></td>
          </tr>
        </table></td>
    </tr>
    <tr>
      <td scope="row">&nbsp;</td>
    </tr>
  </table>



</div>

<div class="wrapper">
  <table width="100%" border="0" cellspacing="0" cellpadding="0" class="sa">
    <tr>
      <td scope="row">&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
      <td>&nbsp;</td>
   
    </tr>
    <tr>
      <td scope="row">Print
Zone</td>
      <td>Feature/dimensional Characteristic</td>
      <td>USL</td>
      <td>LSL</td>
      <td>Sample</td>
      <td>Cpk
n=</td>
      <td>Documented Process Control</td>
      <td>Sample Verification</td>
      <td>dfg</td>
      <td>dfg</td>
      <td>Notes/Comments</td>
     
    </tr>
    <% rows= @quality_lot.quality_lot_capabilities.count %>
    <%  @quality_lot.quality_lot_capabilities.order(:item_part_dimension_id).group(:quality_lot_id, :item_part_dimension_id).each do |lot_capability| %>
      <tr>
        <td scope="row">&nbsp;</td>
        <% val = lot_capability.item_part_dimension.item_part_letter+'-'+lot_capability.item_part_dimension.item_part_dimension.round(4).to_s %>
        <td><%= val %></td>

        <td> <%= (lot_capability.item_part_dimension.item_part_dimension + lot_capability.item_part_dimension.item_part_pos_tolerance).to_f.round(4) %></td>
     
        <td><%= (lot_capability.item_part_dimension.item_part_dimension - lot_capability.item_part_dimension.item_part_neg_tolerance).to_f.round(4) %></td>
        <td><%= rows %></td>
        <td><%=lot_capability.lot_dimension_status%></td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
      
      </tr>
    <% end %>

 
  </table>
</div>

