<div class="widget">
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Customer Feedbacks</h4>
            <span class="span6 heading right">
                <%= link_to 'New Customer Feedback', new_customer_feedback_path, :class => "btn btn-mini btn-success" %>
            </span>
        </div> 
    </div>

    <div class="widget-body">
        <table id="table_customer_feedback" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>Organization</th>
                    <th>Title</th>
                    <th>Created By</th>
                    <th>Created At</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>                
            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_customer_feedback", :path => customer_feedbacks_path, :extras => {:slno => false},  
        :columns => '[
                        { "mData": "organization_feed"},
                        { "mData": "title"},
                        { "mData": "user_feed"},
                        { "mData": "created"},
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>