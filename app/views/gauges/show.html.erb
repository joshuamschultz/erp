<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Guage Info</h4>
  </div>
  <table class="table table-striped table-bordered">
    <tbody>     
      <tr>
        <td>Tool Name:</td>
        <td><%= @gauge.gauge_tool_name %></td>
      </tr>

      <tr>
        <td>Tool No:</td>
        <td><%= @gauge.gauge_tool_no %></td>
      </tr>

      <tr>
        <td>Caliberation At:</td>
        <td><%= @gauge.gage_caliberation_at %></td>
      </tr>

      <tr>
        <td>Caliberaion Period:</td>
        <td><%= @gauge.gage_caliberaion_period %></td>
      </tr>

      <tr>
        <td>Gauge Active:</td>
        <td><%= @gauge.gauge_active %></td>
      </tr>    
    </tbody>
  </table>

  <div class="form-actions">
    <%= link_to 'Edit', edit_organization_gauge_path(@organization, @gauge), :class => "btn btn-small"%> 
    <%= link_to 'Dimensions', organization_gauge_dimensions_path(@organization, @gauge), :class => "btn btn-small"%> 
    <%= link_to 'Back to Gauges of ' + @organization.organization_name, organization_gauges_path(@organization), :class => "btn btn-small" %>
  </div>
</div>