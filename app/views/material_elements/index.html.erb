<div class="row-fluid">
  <div class="row-fluid">
    <div class="span6">
          <h4><strong class="alert-success">Material Elements of <%= @material.material_short_name %></strong></h4>
    </div>
    <div class="span6">
        <%= link_to 'New Element', new_material_material_element_path(@material), :class => "btn btn-mini btn-success" %>
        <%= link_to 'Back to Materials', materials_path, :class => "btn btn-mini btn-info" %>
    </div>    
  </div>

  <% if notice %><p id="notice" class="alert alert-info"><%= notice %></p><% end %>

  <table id="table_report" class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Symbol</th>
        <th>Low Range</th>
        <th>High Range</th>
        <th>Active</th>
        <th></th>
      </tr>
    </thead>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td>.............</td>
    <tbody>
      
    </tbody>
  </table>
</div>


<script type="text/javascript">
    $(document).ready(function(){ 
        var oTable1 = $('#table_report').dataTable({
            "bAutoWidth": false,
            "bProcessing": true,
            "sAjaxSource": '<%= material_material_elements_path(@material) %>',
            "aoColumns": [
                { "mData": "id" },
                { "mData": "element_name" },
                { "mData": "element_symbol" },
                { "mData": "element_low_range" },
                { "mData": "element_high_range" },
                { "mData": "element_active" },
                { "mData": "links", "bSortable": false, "bSearchable": false }
            ]
        });
    });
</script>