<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Elements of <%= link_to @material.material_short_name, @material %></h4>
            <span class="span6 heading right">
                <% if can? :edit , MaterialElement %>
                    <%= link_to 'New Element', new_material_material_element_path(@material), :class => "btn btn-mini btn-success" %>
                <% end %>
                <%= link_to 'Materials', materials_path, :class => "btn btn-mini btn-info" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>SLNO</th>
                <th>Element</th>
                <th>Symbol</th>
                <th>Low Range</th>
                <th>High Range</th>
                <th></th>
              </tr>
            </thead>
            <tbody>

            </tbody>
        </table>
    </div>
</div>


<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {:name => "table_report", :path => material_material_elements_path(@material),
        :columns => '[
                        { "mData": "id" },
                        { "mData": "element_name" },
                        { "mData": "element_symbol" },
                        { "mData": "element_low_range" },
                        { "mData": "element_high_range" },
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>