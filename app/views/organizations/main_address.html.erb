<div class="row-fluid">
    <h4 class="span3 left">Organization Address</h4>
    <span class="span9 right">        
        <%= link_to 'Back to Organization', organization_path(@organization), :class =>"btn btn-small" %>
    </span>
</div>

<div class="row-fluid span8">
    <table class="table table-striped table-bordered">
        <tbody>
            <tr>
              <td class="span2">Title:</td>
              <td class="span5"><%= @organization.organization_name %></td>
            </tr>

            <tr>
              <td class="span3">Description:</td>
              <td class="span5"><%= @organization.organization_description %></td>
            </tr>

            <tr>
              <td class="span3">Address 1:</td>
              <td class="span5"><%= @organization.organization_address_1 %></td>
            </tr>

           <tr>
              <td class="span3">Address 2:</td>
              <td class="span5"><%= @organization.organization_address_2 %></td>
            </tr>

            <tr>
              <td class="span3">City:</td>
              <td class="span5"><%= @organization.organization_city %></td>
            </tr>

            <tr>
              <td class="span3">State:</td>
              <td class="span5"><%= @organization.organization_state %></td>
            </tr>

            <tr>
              <td class="span3">Country:</td>
              <td class="span5"><%= @organization.organization_country %></td>
            </tr>

            <tr>
              <td class="span3">Zipcode:</td>
              <td class="span5"><%= @organization.organization_zipcode %></td>
            </tr>

            <tr>
              <td class="span3">Telephone:</td>
              <td class="span5"><%= @organization.organization_telephone %></td>
            </tr>

            <tr>
              <td class="span3">Fax:</td>
              <td class="span5"><%= @organization.organization_fax %></td>
            </tr>

            <tr>
              <td class="span3">Email:</td>
              <td class="span5"><%= @organization.organization_email %></td>
            </tr>

            <tr>
              <td class="span3">Website:</td>
              <td class="span5"><%= @organization.organization_website %></td>
            </tr>

            <tr>
              <td class="span3">Notes:</td>
              <td class="span5"><%= @organization.organization_notes %></td>
            </tr>
        </tbody>
    </table>

  <div class="form-actions">

  </div>
</div>
