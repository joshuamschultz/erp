  <!-- Wells -->
<h3><%= @organization.organization_type.type_name %><span></span></h3>
<div class="row-fluid">
    <div class="span4 well view_organization_details">
            <address class="margin-none">

                <h3><a href="#"><strong><%= @organization.organization_name %></strong></a> (<%= @organization.organization_short_name %>)</h3>

                <strong><%= @organization.organization_description %></strong><br/>

                <% if @organization.organization_type.type_value == "customer" %>

                    <abbr>Contact Type : </abbr><%= @organization.contact_type.type_name if @organization.contact_type %><br/>

                    <abbr>Quality Level : </abbr><%= @organization.customer_quality.quality_name if @organization.customer_quality %><br/>

                    <abbr>Minimum Quality ID : </abbr><%= @organization.min_vendor_quality.quality_name if @organization.min_vendor_quality %><br/>

                <% elsif @organization.organization_type.type_value == "vendor" %>

                    <abbr>Quality ID : </abbr><%= @organization.vendor_quality.quality_name @organization.vendor_quality %><br/>

                    <abbr>Expiration Date : </abbr><%= @organization.vendor_expiration_date.strfdate("%m/%d/%Y") %><br/>

                <% end %>

                <abbr>Address 1 : </abbr><%= @organization.organization_address_1 %><br/>

                <abbr>Address 2 : </abbr><%= @organization.organization_address_2 %><br/>

                <abbr>Location : </abbr><%= @organization.organization_city %>,  <%= @organization.organization_state %>,  <%= @organization.organization_country %><br/>

                <abbr>Zip : </abbr><%= @organization.organization_zipcode %><br/>

                <abbr>Website : </abbr><a href="<%= @organization.organization_website %>"><%= @organization.organization_website %></a><br/>

                <abbr>Active : </abbr><%= @organization.organization_active %><br/>

                <abbr>E-Mail : </abbr> <a href="mailto:#"><%= @organization.organization_email %></a><br /> 

                <abbr>Telephone : </abbr><%= @organization.organization_telephone %><br/>

                <abbr>Fax : </abbr><%= @organization.organization_fax %>

                <p><abbr>Notes : </abbr><%= @organization.organization_notes %></p>

                <div class="separator line"></div>

                <p class="margin-none"><strong></strong><br/></p>
            </address>
    </div>

    <div class="span8">
        <div class="row-fluid">
            <div class="span6 well">
                <a class="widget-stats" href="#" id="alt_address_btn">
                    <span class="glyphicons pin_flag"><i></i></span>
                    <span class="txt">Alternate Addresses</span>
                    <div class="clearfix"></div>
                </a>
            </div>

            <div class="span6 well">
                <a class="widget-stats" href="#" id="contacts_btn">
                    <span class="glyphicons adress_book"><i></i></span>
                    <span class="txt">Contacts</span>
                    <div class="clearfix"></div>
                </a>
            </div>
        </div>

        <div class="row-fluid">
            <div id="organization_table_data" class="span12 well">

            </div>
        </div>
    </div>
</div>

<div class="separator bottom"></div>

<h3>Comments : <span></span></h3>
<div class="well"> 
    <div class="row-fluid">    
        <div class="span12">
            <%= form_tag(comment_organization_path(type: "note"), method: "post") do %>
                <div class="input-append span11">
                    <input name="comment" class="span11" type="text" placeholder="Add a note..." />
                    <button class="btn btn-default" type="submit">Add</button>
                </div>
            <% end %>
        </div>
    </div>

    <div class="row-fluid">
        <div class="organization_comments widget-timeline span12">
            <ul class="list-timeline">
                <% @notes.each do |note| %>
                    <li>
                        <span class="date timeline_comment_date"><%= note.created_at.strftime("%m/%d/%Y") %></span>
                        <span class="glyphicons activity-icon user"><i></i></span>
                        <span class="ellipsis"><a href="#"><%= note.created_by.name %></a> : <%= note.comment %></span>
                    </li>
                <% end %>
            </ul>
        </div>   
    </div>
</div>


<div class="separator bottom"></div>

<h3>Tags : <span></span></h3>
<div class="well"> 
    <div class="row-fluid">    
        <div class="span12">
            <%= form_tag(comment_organization_path(type: "tag"), method: "post") do %>
                <div class="input-append span11">
                    <input type="hidden" id="organization_tags" style="width: 100%;" value="<%= @tags.collect(&:comment).join(",") %>" />
                    <input type="hidden" name="tags" id="organization_tag_list" value="" />
                    <button class="btn btn-default" id="submit_org_tags" type="submit">Add</button>
                </div>
            <% end %>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(document).ready(function(){ 
            $("#organization_tags").select2({tags:[]});

            $("#submit_org_tags").on("click", function(e){
              $("#organization_tag_list").val($("#organization_tags").select2("val"));
            });

