  <!-- Wells -->
<div class="row-fluid">
    <h3 class="span3 left"><%= @organization.organization_type.type_name %><span></span></h3>
    <span class="span9 right">
        <%= link_to 'Edit', edit_organization_path(@organization), :class => "btn btn-small" %>
        <%#= link_to 'Gauges', organization_gauges_path(@organization), :class => "btn btn-small" if @organization.organization_type.type_value == "support" %>
        <%= link_to 'Back to Organizations', organizations_path, :class => "btn btn-small" %>
    </span>
</div>

<div class="row-fluid">
    <div class="span3 well view_organization_details">
            <address class="margin-none">

                <h3><a href="#"><strong><%= @organization.organization_name %></strong></a> (<%= @organization.organization_short_name %>)</h3>

                <strong><%= @organization.organization_description %></strong><br/>

                <!--abbr>Address 1 : </abbr-->
                <%= @organization.organization_address_1 %><br/>

                <!--abbr>Address 2 : </abbr-->
                <%= @organization.organization_address_2 %><br/>

                <!--abbr>Location : </abbr-->
                <%= @organization.organization_city %>,  <%= @organization.organization_state %>,  <%= @organization.organization_zipcode %><br/>

                <%= @organization.organization_country %><br/>

                <!--abbr>Zip : </abbr-->

                <!--abbr>Active : </abbr--><%#= @organization.organization_active %>

                <abbr>Telephone : </abbr><%= @organization.organization_telephone %><br/>

                <abbr>Fax : </abbr><%= @organization.organization_fax %><br/>

                <abbr>Website : </abbr><a href="<%= @organization.organization_website %>"><%= @organization.organization_website %></a><br/>

                <abbr>E-Mail : </abbr> <a href="mailto:#"><%= @organization.organization_email %></a><br />

                <abbr>Contact Type : </abbr><%= @organization.contact_type.type_name if @organization.contact_type %><br/>

                <% if @organization.organization_type.type_value == "customer" %>
                    <abbr>Quality Level : </abbr><%= @organization.customer_quality.quality_name if @organization.customer_quality %><br/>

                    <abbr>Minimum Quality ID : </abbr><%= @organization.min_vendor_quality.quality_name if @organization.min_vendor_quality %><br/>
                    
                <% elsif @organization.organization_type.type_value == "vendor" %>
                    <abbr>Quality ID : </abbr><%= @organization.vendor_quality.quality_name if @organization.vendor_quality %><br/>

                    <abbr>Expiration Date : </abbr><%= @organization.vendor_expiration_date.strftime("%m/%d/%Y") if @organization.vendor_expiration_date %><br/>
                <% end %>

                <p><abbr>Notes : </abbr><%= @organization.organization_notes %></p>

                <div class="separator line"></div>

                <p class="margin-none"><strong></strong><br/></p>
            </address>
    </div>

    <div class="span9">
        <div class="row-fluid">
            <div class="span6 well">
                <a class="widget-stats" href="<%= organization_path(@organization, :contact_type => 'address') %>" id="alt_address_btn">
                    <span class="glyphicons pin_flag"><i></i></span>
                    <span class="txt">Alternate Addresses</span>
                    <div class="clearfix"></div>
                </a>
            </div>

            <div class="span6 well">
                <a class="widget-stats" href="<%= organization_path(@organization, :contact_type => 'contact') %>" id="contacts_btn">
                    <span class="glyphicons adress_book"><i></i></span>
                    <span class="txt">Contacts</span>
                    <div class="clearfix"></div>
                </a>
            </div>
        </div>

        <div class="row-fluid">
            <div id="organization_table_data" class="span12 well">
                <%= render 'contacts/org_contacts' %>
            </div>
        </div>
    </div>
</div>

<!-- Attachments -->
<%= render 'attachments/attachments' %>

<% if @organization.organization_type.type_value == "vendor" %>
    <div class="separator bottom"></div>

    <h5>Processes : <span></span></h5>
    <div class="well"> 
        <div class="row-fluid">    
            <div class="span12">
                <%= form_tag(populate_organization_path(type: "process"), method: "post") do %>
                    <%= select_tag "processes[]", options_for_select(ProcessType.all.map {|process| [process.process_short_name, process.id]}, @organization.organization_processes.empty? ? [] : @organization.organization_processes.collect(&:process_type_id)), :multiple => true, :size => 5, :class => "multi_select_box" %>
                    <button class="btn btn-default" id="submit_org_tags" type="submit">Save</button>
                <% end %>
            </div>
        </div>
    </div>

    <div class="separator bottom"></div>    
<% end %>

<h5>Tags : <span></span></h5>
<div class="well"> 
    <div class="row-fluid">    
        <div class="span12">
            <%= form_tag(populate_organization_path(type: "tag"), method: "post") do %>
                <div class="input-append span11">
                    <input type="hidden" id="organization_tags" style="width: 100%;" name="tags" value="<%= @tags.collect(&:comment).join(",") %>" />
                    <!-- <input type="hidden" name="tags" id="organization_tag_list" value="" /> -->
                    <button class="btn btn-default" id="submit_org_tags" type="submit">Save</button>
                </div>
            <% end %>
        </div>
    </div>
</div>

<div class="separator bottom"></div>

<h5>Comments : <span></span></h5>
<div class="well"> 
    <div class="row-fluid">    
        <div class="span12">
            <%= form_tag(populate_organization_path(type: "note"), method: "post") do %>
                <div class="input-append span11">
                    <input name="comment" class="span11" type="text" placeholder="Add a note..." />
                    <button class="btn btn-default" type="submit">Save</button>
                </div>
            <% end %>
        </div>
    </div>

    <div class="row-fluid">
        <div class="organization_comments widget-timeline span12">
            <ul class="list-timeline">
                <% @notes.each do |note| %>
                    <li>
                        <span class="date timeline_comment_date"><%= note.created_at.strftime("%m/%d/%Y") %></span>
                        <span class="glyphicons activity-icon user"><i></i></span>
                        <span class="ellipsis"><a href="#"><%= note.created_by.name %></a> : <%= note.comment %></span>
                    </li>
                <% end %>
            </ul>
        </div>   
    </div>
</div>



<script type="text/javascript">
    $(document).ready(function(){ 
        $("#organization_tags").select2({tags:<%= Commodity.all.collect(&:commodity_identifier).to_s.html_safe %>});

        // $("#submit_org_tags").on("click", function(e){
        //   $("#organization_tag_list").val($("#organization_tags").select2("val"));
        // });
    });

    function callback_for_contacts(response, callback_params, api_params){
        $("#organization_table_data").html(response);
    }
</script>


