<!-- Wells -->
<div class="row-fluid">
    <h4 class="span3 left">Quality Level Info</h4>
    <span class="span9 right">
        <%= link_to 'Edit', edit_customer_quality_path(@customer_quality), :class => "btn btn-small" %>
        <%= link_to 'Back to Qualities', customer_qualities_path, :class => "btn btn-small" %>
    </span>
</div>

