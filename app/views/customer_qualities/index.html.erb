<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Quality Levels</h4>
            <span class="span6 heading right">
             <% if can? :edit, CustomerQuality %>
                <%#= link_to 'New Quality', new_customer_quality_path, :class => "btn btn-mini btn-success" %>
            <% end %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->
    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>SLNO</th>
                <th>Name</th>
                <th>Description</th>
                <th>Notes</th>                
                <th>Active</th>
                <th></th>
              </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report", :path => customer_qualities_path,
        :columns => '[
                        { "mData": "id" },
                        { "mData": "quality_name" },
                        { "mData": "quality_description" },
                        { "mData": "quality_notes" },
                        { "mData": "quality_active"},
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>
