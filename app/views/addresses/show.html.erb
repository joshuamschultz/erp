<div class="row-fluid">
    <h4 class="span3 left"><%= @address.address_type.titlecase %> Info</h4>
    <span class="span9 right">        
    </span>
</div>

<div class="row-fluid span8">
    <table class="table table-striped table-bordered">
        <tbody>
          <tr>
            <td class="span2">Title :</td>
            <td class="span5"><%= @address.address_title %></td>
          </tr>

          <tr>
            <td class="span3">Description :</td>
            <td class="span5"><%= @address.address_description %></td>
          </tr>

          <tr>
            <td class="span3">Address 1 :</td>
            <td class="span5"><%= @address.address_address_1 %></td>
          </tr>

         <tr>
            <td class="span3">Address 2 :</td>
            <td class="span5"><%= @address.address_address_2 %></td>
          </tr>

          <tr>
            <td class="span3">City :</td>
            <td class="span5"><%= @address.address_city %></td>
          </tr>

          <tr>
            <td class="span3">State :</td>
            <td class="span5"><%= @address.address_state %></td>
          </tr>

          <tr>
            <td class="span3">Country :</td>
            <td class="span5"><%= @address.address_country %></td>
          </tr>

          <tr>
            <td class="span3">Zipcode :</td>
            <td class="span5"><%= @address.address_zipcode %></td>
          </tr>

          <tr>
            <td class="span3">Telephone :</td>
            <td class="span5"><%= @address.address_telephone %></td>
          </tr>

          <tr>
            <td class="span3">Fax :</td>
            <td class="span5"><%= @address.address_fax %></td>
          </tr>

          <tr>
            <td class="span3">Email :</td>
            <td class="span5"><%= @address.address_email %></td>
          </tr>

          <tr>
            <td class="span3">Website :</td>
            <td class="span5"><%= @address.address_website %></td>
          </tr>

          <tr>
            <td class="span3">Notes :</td>
            <td class="span5"><%= @address.address_notes %></td>
          </tr>

        </tbody>
    </table>

  <div class="form-actions">
    <% if can? :update, @addresses %>
    <%= link_to 'Edit', edit_address_path(@address), :class => "btn btn-small" %>
    <% end %>
    <%= link_to 'Back to ' + @address.address_type.titlecase.pluralize, organization_path(@addressable.id,tab: :'tab2-4'), :class => "btn btn-small" %>

    <%= link_to 'Back to ' + @addressable.class.to_s, @addressable, :class => "btn btn-small" %>
  </div>
</div>