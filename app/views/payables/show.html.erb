<div class="row-fluid">
    <h4 class="span3 left">Payable Info</h4>
    <span class="span9 right">
        <%= link_to 'Edit', edit_payable_path(@payable), :class => "btn btn-small" %>
        <%= link_to 'Back', payables_path, :class => "btn btn-small" %>
    </span>
</div>

<div class="row-fluid">
    <%= render :partial => 'payables/payable_info' %>

    <div class="span9">
        <%= render :partial => 'payable_lines/line_items' unless @po_header %>

        <% if @po_header %>
            <table id="payable_shipments_table" class="data_lines_table dynamicTable table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>Part No</th>
                        <th>Quantity Ordered</th>
                        <th>Total Received</th>
                        <th>Cost</th>
                        <th>Payable For</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="payable_shipments_table_table_body">
                    <% @payable.payable_shipments.where("payable_shipment_count > 0").each do |payable_shipment| %>
                        <tr>
                            <td><%= link_to payable_shipment.po_line.item_alt_name.item_alt_identifier, item_path(payable_shipment.po_line.item) %></td>
                            <td><%= payable_shipment.po_line.po_line_quantity %></td>
                            <td><%= payable_shipment.po_line.po_line_shipped %></td>
                            <!-- <td><%#= payable_shipment.po_line.payable_shipments.sum(:payable_shipment_count) %></td> -->
                            <td><%= payable_shipment.po_line.po_line_cost %></td>
                            <td><%= payable_shipment.payable_shipment_count %></td>
                            <td><%= payable_shipment.payable_shipment_count * payable_shipment.po_line.po_line_cost %></td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        <% end %>

        <div class="separator bottom"></div>
        <div class="separator bottom"></div>

        <%= render 'attachments/attachments' %>

        <div class="separator bottom"></div>

        <%= render :partial => 'po_lines/line_items' if @po_header %>
    </div>
</div>



