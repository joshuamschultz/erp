<div class="span3 well item_detail_view">
  <table class="table">
      <tbody>
          <tr>
            <td class="span2">Invoice ID:</td>
            <td class="span5"><strong><%= link_to @payable.payable_identifier, @payable %></strong></td>
          </tr>

      <% if @payable.organization %>
          <tr>
            <td class="span2">Vendor:</td>
            <td class="span5"><strong><%= link_to @payable.organization.organization_name, @payable.organization if @payable.organization %></strong></td>
          </tr>

          <tr>
            <td class="span3">Vendor Invoice:</td>
            <td class="span5"><strong><%= @payable.payable_invoice %></strong></td>
          </tr>

          <% if @payable.po_header %>
            <tr>
              <td class="span2">PO:</td>
              <td class="span5"><strong><%= link_to @payable.po_header.po_identifier, @payable.po_header %></strong></td>
            </tr>
          <% end %>

          <tr>
            <td class="span2">Payable To:</td>
            <td class="span5"><strong><%= @payable.payable_to_address ? link_to(@payable.payable_to_address.contact_description, @payable.payable_to_address) : (link_to(@payable.organization.organization_name, organization_main_address_path(@payable.organization)) if @payable.organization) %></strong></td>
          </tr>
      <% end %>

          <tr>
            <td class="span3">GL Account:</td>
            <td class="span5"><strong><%= link_to @payable.gl_account.gl_account_title, @payable.gl_account if @payable.gl_account %></strong></td>
          </tr>

          <tr>
            <td class="span3">Description:</td>
            <td class="span5"><strong><%= @payable.payable_description %></strong></td>
          </tr>

          <!-- <tr>
            <td class="span3">Cost:</td>
            <td class="span5"><strong><%#= @payable.payable_cost %></strong></td>
          </tr> -->

          <tr>
            <td class="span3">Discount:</td>
            <td class="span5"><strong><%= @payable.payable_discount %>%</strong></td>
          </tr>

          <tr>
            <td class="span3">Total:</td>
            <td class="span5"><strong><h4>$<%= @payable.payable_total %></h4></strong></td>
          </tr>

          <tr>
            <td class="span3">Invoice Date:</td>
            <td class="span5"><strong><%= @payable.payable_invoice_date %></strong></td>
          </tr>

          <tr>
            <td class="span3">Due Date:</td>
            <td class="span5"><strong><%= @payable.payable_due_date %></strong></td>
          </tr>

          <tr>
            <td class="span3">Status:</td>
            <td class="span5"><strong><%= @payable.payable_status %></strong></td>
          </tr>

          <!--tr>
            <td class="span3">Freight:</td>
            <td class="span5"><strong><%#= @payable.payable_freight %></strong></td>
          </tr--> 

          <tr>
            <td class="span3">Notes:</td>
            <td class="span5"><strong><%= @payable.payable_notes %></strong></td>
          </tr>          

          <!-- "%0.5f" %  -->

      </tbody>
  </table>

  <div class="separator bottom"></div>
  <div class="separator bottom"></div>

  <%# if @payable.po_header %>
      <!-- <h4 class="center">PO Info</h4> -->

      <%#= render :partial => 'po_headers/po_header_info' %>

      <%#= render :partial => 'organizations/organization_info', 
            :locals => {:organization => @payable.organization} %>
  <%# end %>
</div>