<div class="row-fluid span8">
  <div class="label label-large label-info arrowed-in arrowed-right">
        <h4>Guage Info</h4>
  </div>
  <table class="table table-striped table-bordered">
    <tbody>     
      <tr>
        <td>Identifier:</td>
        <td><%= @item_alt_name.item_alt_identifier %></td>
      </tr>

      <tr>
        <td>Description:</td>
        <td><%= @item_alt_name.item_alt_description %></td>
      </tr>

      <tr>
        <td>Notes:</td>
        <td><%= @item_alt_name.item_alt_notes %></td>
      </tr>

      <tr>
        <td>Active:</td>
        <td><%= @item_alt_name.item_alt_active %></td>
      </tr>
    </tbody>
  </table>
  <div class="form-actions">
    <%= link_to 'Edit', edit_item_item_alt_name_path(@item, @item_alt_name), :class => "btn btn-small"%> 
    <%= link_to 'Back to item_alt_name of ' + @item.item_name, item_item_alt_names_path(@item), :class => "btn btn-small" %>
  </div>
</div>


