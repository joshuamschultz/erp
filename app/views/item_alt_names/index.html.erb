<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Alt Names</h4>
            <span class="span6 heading right">
                <%= link_to 'New Alt Name', new_item_alt_name_path, :class => "btn btn-mini btn-success" %>               
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->
    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Notes</th>
                <th>Active</th>
                <th></th>
              </tr>
            </thead>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report", :path => item_alt_names_path, :extras => {:slno => false}, 
        :columns => '[
                        { "mData": "item_alt_identifier" },
                        { "mData": "item_alt_description" },
                        { "mData": "item_alt_notes" },
                        { "mData": "item_alt_active"},
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>