<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Items Alt of <%= @item.item_name %></h4>
            <span class="span6 heading right">
                <%= link_to 'Back to Item', item_path(@item), :class => "btn btn-mini" %>
                <%= link_to 'New Item alt names', new_item_item_alt_name_path(@item), :class => "btn btn-mini btn-success" %>               
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->
    <div class="widget-body">
        <table id="table_report" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>SLNO</th>
                <th>Item</th>
                <th>Identifier</th>
                <th>Description</th>
                <th>Notes</th>
                <th>Active</th>
                <th></th>
              </tr>
            </thead>
        </table>
    </div>
</div>

<%= render :partial => 'layouts/app_layouts/data_table', :locals => 
    {
        :name => "table_report", :path => item_item_alt_names_path(@item),
        :columns => '[
                        { "mData": "item_name" },
                        { "mData": "show" },
                        { "mData": "item_alt_description" },
                        { "mData": "item_alt_notes" },
                        { "mData": "item_alt_active"},
                        { "mData": "links", "bSortable": false, "bSearchable": false }
                    ]'
    } 
%>