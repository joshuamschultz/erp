<!-- Widget -->
<div class="widget">
    <!-- Widget heading -->
    <div class="widget-head">
        <div class="row-fluid">
            <h4 class="span6 heading">Owners</h4>
            <span class="span6 heading right">
                <%= link_to 'New Owner', new_owner_path, :class => "btn btn-mini btn-success" %>
            </span>
        </div> 
    </div>
    <!-- // Widget heading END -->

    <div class="widget-body">
        <table id="DataTables_Table_0" class="dynamicTable table table-striped table-bordered table-condensed">
            <thead>
              <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Commission Type</th>
                <th>Commission Percentage</th>
                <th>Active</th>
                <th></th>
              </tr>
            </thead>

            <tbody>

            </tbody>
        </table>
    </div>
</div>


<script type="text/javascript">
    $(document).ready(function(){ 
        var oTable1 = $('#DataTables_Table_0').dataTable({
            "bAutoWidth": false,
            "bProcessing": true,
            "sAjaxSource": '<%= owners_path %>',
            "aoColumns": [
                { "mData": "id" },
                { "mData": "owner_identifier" },
                { "mData": "owner_description" },
                { "mData": "owner_commission_type" },
                { "mData": "owner_commission_percentage"},
                { "mData": "owner_active" },
                { "mData": "links", "bSortable": false, "bSearchable": false }
            ],
            "sPaginationType": "bootstrap",
            "oLanguage": {
                "sLengthMenu": "_MENU_ records per page"
            }
        });
    });
</script>
