<%= simple_form_for(@owner, :html => {:id => "form_for_owners",:class => "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :owner_identifier, :label => "Name", :autofocus => true %>
    <%= f.input :owner_description, :label => "Description" %>
    <%= f.association :commission_type, :label_method => "type_name", :label_value => "id", :include_blank => false, :label => "Commission Type" %>
    <%= f.input :owner_commission_amount, :label => "Commission Percentage" %>
    <%= f.input :owner_active, :label => "Active" %>
  </div>

  <div class="separator bottom"></div>

  <div class="form-actions">
    <%= f.button :submit %>
    <%= link_to 'Back to Owners', owners_path, :class => "btn" %>
  </div>
<% end %>

<script type="text/javascript">
    tab_field_forms["form_for_owners"] = ["owner_owner_identifier", "owner_owner_description", "owner_owner_commission_type_id", "owner_owner_commission_amount", "owner_owner_active"];
</script>